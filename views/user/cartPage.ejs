<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopping Cart - Rube Collection</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: "Lato", sans-serif;
        }
        .product-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
        }
        .quantity-btn {
            width: 28px;
            height: 28px;
            border: 1px solid #000;
            background: white;
            cursor: pointer;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.2s;
        }
        .quantity-btn:hover:not(:disabled) {
            background: #000;
            color: white;
        }
        .quantity-btn:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }
        .category-badge {
            background: #e0f2fe;
            color: #0369a1;
            padding: 4px 12px;
            border-radius: 16px;
            font-size: 12px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
        .discount-badge {
            background: #dc2626;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
    </style>
</head>

<body class="bg-gray-50">
    <%- include("../partials/user/header.ejs") %>

    <div class="max-w-full mx-auto px-6 lg:px-12 py-8">

        <% if (cartItems && cartItems.length > 0) { %>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-sm p-6 lg:p-8">
                    <div class="flex justify-between items-center mb-8">
                        <h1 class="text-xl font-medium text-gray-800">Shopping Cart (<%= cartItems.length %> items)</h1>
                    </div>

                    <div class="space-y-6">
                        <% cartItems.forEach(item => { 
                            const product = item.packageProductId;
                            if (!product) return;

                            const variant = product.VariantItem?.find(v => v._id.toString() === item.variantId?.toString());
                            
                            // Get prices from variant if available, otherwise from item
                            const currentPrice = variant ? (variant.offerPrice || variant.Price) : (item.price || 0);
                            const originalPrice = variant ? variant.Price : currentPrice;
                            const hasDiscount = variant && variant.offerPrice && variant.Price > variant.offerPrice;
                            const discountPercentage = hasDiscount ? 
                                Math.round(((originalPrice - currentPrice) / originalPrice) * 100) : 0;
                            
                            const stock = variant?.Quantity || product.stock || 0;
                            const itemTotal = currentPrice * item.quantity;

                            const productName = product.productName || "Product";
                            const image = product.images?.[0] || "/images/placeholder.png";

                            const categoryName = product.category?.name || "Uncategorized";
                        %>

                        <div class="border border-gray-200 rounded-lg p-6 <%= stock <= 0 ? 'opacity-50' : '' %>">
                            <div class="flex gap-6">
                                <img src="<%= image %>" class="product-image rounded-lg" onerror="this.src='/images/placeholder.png'" />

                                <div class="flex-1">
                                    <div class="flex justify-between mb-2">
                                        <div>
                                            <h3 class="text-lg font-medium text-gray-900 mb-1"><%= productName %></h3>
                                            
                                            <% if (categoryName && categoryName !== "Uncategorized") { %>
                                                <div class="category-badge mt-1">
                                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                                    </svg>
                                                    <%= categoryName %>
                                                </div>
                                            <% } %>
                                        </div>

                                        <button onclick="removeFromCart('<%= item._id %>')" class="text-gray-400 hover:text-red-600 transition">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </button>
                                    </div>

                                    <% if (variant) { %>
                                        <p class="text-sm text-gray-600 mb-2">Size: <span class="font-medium"><%= variant.Ml %>ml</span></p>
                                    <% } %>

                                    <% if (stock <= 0) { %>
                                        <span class="text-red-600 text-sm font-medium bg-red-50 px-2 py-1 rounded">OUT OF STOCK</span>
                                    <% } else if (stock < 5) { %>
                                        <span class="text-orange-600 text-sm font-medium bg-orange-50 px-2 py-1 rounded">Only <%= stock %> left in stock</span>
                                    <% } %>

                                    <div class="flex justify-between items-center mt-4">
                                        <div class="flex items-center gap-2">
                                            <button class="quantity-btn" 
                                                    onclick="updateQuantity('<%= item._id %>', 'decrement')" 
                                                    <%= item.quantity <= 1 || stock <= 0 ? 'disabled' : '' %>>
                                                −
                                            </button>
                                            <span class="w-8 text-center font-medium"><%= item.quantity %></span>
                                            <button class="quantity-btn" 
                                                    onclick="updateQuantity('<%= item._id %>', 'increment')" 
                                                    <%= item.quantity >= stock || item.quantity >= 10 || stock <= 0 ? 'disabled' : '' %>>+
                                            </button>
                                        </div>

                                        <div class="text-right">
                                            <div class="flex items-center justify-end gap-2 mb-1">
                                                <% if (hasDiscount) { %>
                                                    <span class="discount-badge">
                                                        <i class="fas fa-tag text-xs"></i>
                                                        <%= discountPercentage %>% OFF
                                                    </span>
                                                <% } %>
                                            </div>
                                            
                                            <div class="flex items-center justify-end gap-2">
                                                <div class="text-lg font-semibold text-gray-900">₹<%= currentPrice.toFixed(2) %></div>
                                                <% if (hasDiscount) { %>
                                                    <div class="text-gray-500 line-through text-sm">₹<%= originalPrice.toFixed(2) %></div>
                                                <% } %>
                                            </div>
                                            
                                            <div class="text-gray-600 font-medium mt-1">
                                                Total: ₹<%= itemTotal.toFixed(2) %>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>

                    <% if (totalPage > 1) { %>
                    <div class="flex justify-center mt-8 space-x-2 pt-6 border-t border-gray-200">
                        <% if (page > 1) { %>
                        <a
                            href="/cart?page=<%= page - 1 %>"
                            class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded"
                        >
                            Previous
                        </a>
                        <% } %> 
                        
                        <% for (let i = 1; i <= totalPage; i++) { %>
                        <a
                            href="/cart?page=<%= i %>"
                            class="px-4 py-2 rounded <%= i === page ? 'bg-red-700 text-white' : 'bg-gray-200 hover:bg-gray-300 text-gray-700' %>"
                        >
                            <%= i %>
                        </a>
                        <% } %> 
                        
                        <% if (page < totalPage) { %>
                        <a
                            href="/cart?page=<%= page + 1 %>"
                            class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded"
                        >
                            Next
                        </a>
                        <% } %>
                    </div>
                    <% } %>

                    <button onclick="window.location.href='/product'" class="mt-6 border-2 border-red-600 text-red-600 px-6 py-3 rounded-lg hover:bg-red-600 hover:text-white transition font-medium">
                        <i class="fas fa-shopping-bag mr-2"></i>Continue Shopping
                    </button>
                </div>
            </div>

            <div>
                <div class="bg-white rounded-lg shadow-sm p-6 sticky top-4">
                    <h2 class="text-xl font-semibold text-gray-800 mb-6">Price Details</h2>

                    <% 
                        let subtotal = 0;
                        let originalSubtotal = 0;
                        let totalDiscount = 0;
                        let hasOutOfStock = false;
                        let inStockItems = 0;
                        
                        cartItems.forEach(item => {
                            const product = item.packageProductId;
                            if (!product) return;
                            
                            const variant = product.VariantItem?.find(v => v._id.toString() === item.variantId?.toString());
                            const stock = variant?.Quantity || product.stock || 0;
                            
                            if (stock <= 0) {
                                hasOutOfStock = true;
                            } else {
                                // Calculate using current variant prices
                                const currentPrice = variant ? (variant.offerPrice || variant.Price) : (item.price || 0);
                                const originalPrice = variant ? variant.Price : currentPrice;
                                const itemTotal = currentPrice * item.quantity;
                                const itemOriginalTotal = originalPrice * item.quantity;
                                
                                subtotal += itemTotal;
                                originalSubtotal += itemOriginalTotal;
                                totalDiscount += (itemOriginalTotal - itemTotal);
                                inStockItems++;
                            }
                        });
                        
                        const hasOverallDiscount = totalDiscount > 0;
                        const shipping = subtotal >= 500 ? 0 : 50;
                        const total = subtotal + shipping;
                    %>

                    <div class="space-y-3 mb-6">
                        <% if (hasOverallDiscount) { %>
                            <div class="flex justify-between py-2">
                                <span class="text-gray-600">Original Price</span>
                                <span class="text-gray-500 line-through">₹<%= originalSubtotal.toFixed(2) %></span>
                            </div>
                            
                            <div class="flex justify-between py-2">
                                <span class="text-gray-600">Discount</span>
                                <span class="text-green-600 font-medium">-₹<%= totalDiscount.toFixed(2) %></span>
                            </div>
                        <% } %>

                        <div class="flex justify-between py-2">
                            <span class="text-gray-600">Price (<%= inStockItems %> items)</span>
                            <span class="text-gray-900 font-medium">₹<%= subtotal.toFixed(2) %></span>
                        </div>

                        <div class="flex justify-between py-2">
                            <span class="text-gray-600">Delivery Charges</span>
                            <span class="<%= shipping === 0 ? 'text-green-600 font-medium' : 'text-gray-900 font-medium' %>">
                                <%= shipping === 0 ? "FREE" : "₹" + shipping.toFixed(2) %>
                            </span>
                        </div>

                        <% if (subtotal > 0 && subtotal < 500) { %>
                            <div class="bg-green-50 p-3 rounded-lg text-sm text-green-700 border border-green-200">
                                <i class="fas fa-gift mr-2"></i>Add ₹<%= (500 - subtotal).toFixed(2) %> more for FREE delivery!
                            </div>
                        <% } %>

                        <div class="flex justify-between pt-4 border-t font-semibold text-lg">
                            <span>Total Amount</span>
                            <span>₹<%= total.toFixed(2) %></span>
                        </div>
                        
                        <% if (hasOverallDiscount) { %>
                            <div class="text-sm text-green-600 text-right mt-1">
                                <i class="fas fa-piggy-bank mr-1"></i>You save ₹<%= totalDiscount.toFixed(2) %>
                            </div>
                        <% } %>
                    </div>

                    <% if (hasOutOfStock) { %>
                        <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700">
                            <i class="fas fa-exclamation-circle mr-2"></i>Please remove out-of-stock items to proceed
                        </div>
                    <% } %>

                    <button onclick="proceedToCheckout()" 
                            class="w-full bg-red-600 text-white py-3 rounded-lg font-medium hover:bg-red-700 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
                            <%= hasOutOfStock ? 'disabled' : '' %>>
                        <i class="fas fa-lock mr-2"></i><%= hasOutOfStock ? 'Cannot Proceed - Out of Stock Items' : 'Place Order' %>
                    </button>
                    
                    <div class="mt-4 text-xs text-gray-500 text-center">
                        <i class="fas fa-shield-alt mr-1"></i>Secure checkout · 100% Safe & Secure
                    </div>
                </div>
            </div>
        </div>

        <% } else { %>

        <div class="bg-white rounded-lg shadow-sm p-12 text-center">
            <div class="max-w-md mx-auto">
                <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-shopping-cart text-4xl text-gray-400"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 mb-3">Your cart is empty</h2>
                <p class="text-gray-600 mb-8">Looks like you haven't added anything to your cart yet</p>
                <a href="/product" class="inline-block bg-red-600 text-white px-8 py-3 rounded-lg hover:bg-red-700 transition font-semibold">
                    <i class="fas fa-shopping-bag mr-2"></i>Start Shopping
                </a>
            </div>
        </div>

        <% } %>

    </div>

    <%- include("../partials/user/footer.ejs") %>

    <script>
        const showAlert = {
            loading: (message = 'Processing...') => {
                Swal.fire({
                    title: message,
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
            },
            close: () => {
                Swal.close();
            }
        };

        async function updateQuantity(itemId, action) {
            try {
                showAlert.loading('Updating quantity...');
                
                const res = await axios.post("/cart/update-quantity", { itemId, action });
                
                showAlert.close();
                
                if (res.data.success) {
                    window.location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Cannot Update Quantity',
                        text: res.data.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            } catch (error) {
                showAlert.close();
                
                if (error.response?.status === 401) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Login Required',
                        text: 'Please login to update cart',
                        confirmButtonColor: '#dc2626',
                        showCancelButton: true,
                        confirmButtonText: 'Login',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/login';
                        }
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Something went wrong while updating quantity',
                        confirmButtonColor: '#dc2626'
                    });
                }
            }
        }

        async function removeFromCart(itemId) {
            const confirm = await Swal.fire({
                title: "Remove item?",
                text: "This item will be removed from your cart",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dc2626",
                cancelButtonColor: "#6b7280",
                confirmButtonText: "Yes, remove it",
                cancelButtonText: "Cancel"
            });

            if (!confirm.isConfirmed) return;

            try {
                showAlert.loading('Removing item...');
                
                const res = await axios.post(`/cart/remove/${itemId}`);
                
                showAlert.close();
                
                if (res.data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Item Removed',
                        text: res.data.message,
                        confirmButtonColor: '#dc2626',
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: res.data.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            } catch (error) {
                showAlert.close();
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error removing item from cart',
                    confirmButtonColor: '#dc2626'
                });
            }
        }

        function proceedToCheckout() {
            window.location.href = "/checkout";
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.quantity-btn, button[onclick*="removeFromCart"]');
            
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    const originalOnClick = this.getAttribute('onclick');
                    this.removeAttribute('onclick');
                    this.disabled = true;
                    
                    setTimeout(() => {
                        this.setAttribute('onclick', originalOnClick);
                        this.disabled = false;
                    }, 500);
                });
            });
        });
    </script>
</body>
</html>