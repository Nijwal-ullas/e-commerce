<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rube Collection - Shopping Cart</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: "Lato", sans-serif;
        }
        .product-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
        }
        .quantity-btn {
            width: 28px;
            height: 28px;
            border: 1px solid #000;
            background: white;
            cursor: pointer;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.2s;
        }
        .quantity-btn:hover:not(:disabled) {
            background: #000;
            color: white;
        }
        .quantity-btn:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }
        .category-badge {
            background: #e0f2fe;
            color: #0369a1;
            padding: 4px 12px;
            border-radius: 16px;
            font-size: 12px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }
    </style>
</head>

<body class="bg-white">
    <%- include("../partials/user/header.ejs") %>

    <div class="max-w-7xl mx-auto px-6 lg:px-12 py-8">

        <% if (cartItems && cartItems.length > 0) { %>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <h1 class="text-2xl font-semibold mb-6">Shopping Cart (<%= cartItems.length %> items)</h1>

                <div class="space-y-6">
                    <% cartItems.forEach(item => { 
                        const product = item.packageProductId;
                        if (!product) return;

                        const variant = product.VariantItem?.find(v => v._id.toString() === item.variantId?.toString());
                        const stock = variant?.Quantity || product.stock || 0;

                        const productName = product.productName || "Product";
                        const image = product.images?.[0] || "/images/placeholder.png";

                        const itemPrice = item.price || 0;
                        const itemTotal = item.totalPrice || 0;

                        const categoryName = product.category?.name || "Uncategorized";
                    %>

                    <div class="border border-gray-200 p-6 <%= stock <= 0 ? 'opacity-50' : '' %>">
                        <div class="flex gap-6">
                            <img src="<%= image %>" class="product-image" onerror="this.src='/images/placeholder.png'" />

                            <div class="flex-1">
                                <div class="flex justify-between mb-2">
                                    <div>
                                        <h3 class="text-lg font-medium text-gray-900 mb-1"><%= productName %></h3>
                                        
                                        <% if (categoryName && categoryName !== "Uncategorized") { %>
                                            <div class="category-badge mt-1">
                                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                                                </svg>
                                                <%= categoryName %>
                                            </div>
                                        <% } %>
                                    </div>

                                    <button onclick="removeFromCart('<%= item._id %>')" class="text-gray-400 hover:text-red-600 transition">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>

                                <% if (variant) { %>
                                    <p class="text-sm text-gray-600 mb-2">Size: <span class="font-medium"><%= variant.Ml %>ml</span></p>
                                <% } %>

                                <% if (stock <= 0) { %>
                                    <span class="text-red-600 text-sm font-medium bg-red-50 px-2 py-1 rounded">OUT OF STOCK</span>
                                <% } else if (stock < 5) { %>
                                    <span class="text-orange-600 text-sm font-medium bg-orange-50 px-2 py-1 rounded">Only <%= stock %> left in stock</span>
                                <% } %>

                                <div class="flex justify-between items-center mt-4">
                                    <div class="flex items-center gap-2">
                                        <button class="quantity-btn" 
                                                onclick="updateQuantity('<%= item._id %>', 'decrement')" 
                                                <%= item.quantity <= 1 || stock <= 0 ? 'disabled' : '' %>>
                                            âˆ’
                                        </button>
                                        <span class="w-8 text-center font-medium"><%= item.quantity %></span>
                                        <button class="quantity-btn" 
                                                onclick="updateQuantity('<%= item._id %>', 'increment')" 
                                                <%= item.quantity >= stock || item.quantity >= 10 || stock <= 0 ? 'disabled' : '' %>>+
                                        </button>
                                    </div>

                                    <div class="text-right">
                                        <div class="text-lg font-semibold text-gray-900">â‚¹<%= itemPrice.toFixed(2) %></div>
                                        <div class="text-gray-600 font-medium">Total: â‚¹<%= itemTotal.toFixed(2) %></div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <button onclick="window.location.href='/product'" class="mt-6 border border-black px-6 py-3 hover:bg-black hover:text-white transition">
                    Continue Shopping
                </button>
            </div>

            <div>
                <div class="border border-gray-200 p-6 sticky top-4">
                    <h2 class="text-xl font-semibold mb-6">Price Details</h2>

                    <% 
                        let subtotal = 0;
                        let hasOutOfStock = false;
                        
                        cartItems.forEach(item => {
                            const product = item.packageProductId;
                            if (!product) return;
                            
                            const variant = product.VariantItem?.find(v => v._id.toString() === item.variantId?.toString());
                            const stock = variant?.Quantity || product.stock || 0;
                            
                            if (stock <= 0) {
                                hasOutOfStock = true;
                            } else {
                                subtotal += item.totalPrice || 0;
                            }
                        });
                        
                        const shipping = subtotal > 500 ? 0 : 50;
                        const total = subtotal + shipping;
                    %>

                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between py-2">
                            <span class="text-gray-600">Price (<%= cartItems.length %> items)</span>
                            <span class="text-gray-900">â‚¹<%= subtotal.toFixed(2) %></span>
                        </div>

                        <div class="flex justify-between py-2">
                            <span class="text-gray-600">Delivery Charges</span>
                            <span class="<%= shipping === 0 ? 'text-green-600 font-medium' : 'text-gray-900' %>">
                                <%= shipping === 0 ? "FREE" : "â‚¹" + shipping.toFixed(2) %>
                            </span>
                        </div>

                        <% if (subtotal < 500 && subtotal > 0) { %>
                            <div class="bg-green-50 p-3 rounded text-sm text-green-700 border border-green-200">
                                Add â‚¹<%= (500 - subtotal).toFixed(2) %> more for FREE delivery!
                            </div>
                        <% } %>

                        <div class="flex justify-between pt-4 border-t font-semibold text-lg">
                            <span>Total Amount</span>
                            <span>â‚¹<%= total.toFixed(2) %></span>
                        </div>
                    </div>

                    <% if (hasOutOfStock) { %>
                        <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded text-sm text-red-700">
                            Please remove out-of-stock items to proceed
                        </div>
                    <% } %>

                    <button onclick="proceedToCheckout()" 
                            class="w-full bg-red-600 text-white py-3 font-medium hover:bg-red-700 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
                            <%= hasOutOfStock ? 'disabled' : '' %>>
                        <%= hasOutOfStock ? 'Cannot Proceed - Out of Stock Items' : 'Place Order' %>
                    </button>
                </div>
            </div>
        </div>

        <% } else { %>

        <div class="text-center py-16">
            <div class="text-gray-300 text-7xl mb-6">ðŸ›’</div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-3">Your cart is empty</h2>
            <p class="text-gray-500 mb-6">Looks like you haven't added anything to your cart yet</p>
            <a href="/product" class="bg-red-600 text-white px-6 py-3 inline-block hover:bg-red-700 transition font-medium">
                Start Shopping
            </a>
        </div>

        <% } %>

    </div>

    <%- include("../partials/user/footer.ejs") %>

    <script>
        async function updateQuantity(itemId, action) {
            try {
                const res = await axios.post("/cart/update-quantity", { itemId, action });
                if (res.data.success) {
                    window.location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Cannot Update Quantity',
                        text: res.data.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Something went wrong while updating quantity',
                    confirmButtonColor: '#dc2626'
                });
            }
        }

        async function removeFromCart(itemId) {
            const confirm = await Swal.fire({
                title: "Remove item?",
                text: "This item will be removed from your cart",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                confirmButtonText: "Yes, remove it",
                cancelButtonText: "Cancel"
            });

            if (!confirm.isConfirmed) return;

            try {
                const res = await axios.post(`/cart/remove/${itemId}`);
                if (res.data.success) {
                    window.location.reload();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: res.data.message,
                        confirmButtonColor: '#dc2626'
                    });
                }
            } catch {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error removing item from cart',
                    confirmButtonColor: '#dc2626'
                });
            }
        }

        function proceedToCheckout() {
            window.location.href = "/checkout";
        }
    </script>
</body>
</html>