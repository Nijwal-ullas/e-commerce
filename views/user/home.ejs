<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ruhe Collection - Perfume Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital@1&display=swap');
        .logo {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>

<body class="bg-white text-gray-800">

    <!-- ✅ Include Header Partial -->
    <%- include('./partial/header.ejs') %>

    <!-- Hero Carousel Section -->
    <section class="relative h-[500px] overflow-hidden">
        <!-- (same carousel code as before) -->
        <div id="carousel" class="flex transition-transform duration-700 ease-in-out h-full">
            <div class="min-w-full h-full bg-gradient-to-r from-amber-100 to-orange-100 flex items-center justify-center relative">
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                <div class="relative z-10 text-center text-white px-4">
                    <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-lg">Experience Luxury</h1>
                    <a href="/shop" class="inline-block px-8 py-3 bg-white text-gray-800 rounded-full font-semibold hover:bg-gray-800 hover:text-white transition duration-300 shadow-lg">SHOP NOW</a>
                </div>
            </div>
            <div class="min-w-full h-full bg-gradient-to-r from-purple-200 to-pink-200 flex items-center justify-center relative">
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                <div class="relative z-10 text-center text-white px-4">
                    <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-lg">Discover New Scents</h1>
                    <a href="/shop" class="inline-block px-8 py-3 bg-white text-gray-800 rounded-full font-semibold hover:bg-gray-800 hover:text-white transition duration-300 shadow-lg">EXPLORE NOW</a>
                </div>
            </div>
            <div class="min-w-full h-full bg-gradient-to-r from-blue-200 to-teal-200 flex items-center justify-center relative">
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                <div class="relative z-10 text-center text-white px-4">
                    <h1 class="text-5xl md:text-6xl font-bold mb-6 drop-shadow-lg">Premium Collection</h1>
                    <a href="/shop" class="inline-block px-8 py-3 bg-white text-gray-800 rounded-full font-semibold hover:bg-gray-800 hover:text-white transition duration-300 shadow-lg">VIEW COLLECTION</a>
                </div>
            </div>
        </div>

        <!-- Arrows and Dots remain unchanged -->
        <button id="prevBtn" class="absolute left-4 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-50 hover:bg-opacity-100 rounded-full p-3 transition duration-300">
            <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
        </button>
        <button id="nextBtn" class="absolute right-4 top-1/2 transform -translate-y-1/2 z-20 bg-white bg-opacity-50 hover:bg-opacity-100 rounded-full p-3 transition duration-300">
            <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </button>
        <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex space-x-3 z-20">
            <button class="dot w-3 h-3 rounded-full bg-white cursor-pointer transition duration-300" data-slide="0"></button>
            <button class="dot w-3 h-3 rounded-full bg-white bg-opacity-50 cursor-pointer transition duration-300" data-slide="1"></button>
            <button class="dot w-3 h-3 rounded-full bg-white bg-opacity-50 cursor-pointer transition duration-300" data-slide="2"></button>
        </div>
    </section>

    <!-- (Keep your Best Seller and Promo sections as they are) -->
    <section class="py-16 px-6 md:px-12">
        <h2 class="text-3xl font-bold text-center mb-12 tracking-widest uppercase">Best Seller</h2>
        <div class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-6">
            <% const products = [
                { name: 'AMAZING REED DECO', price: '$320' },
                { name: 'LONG LASTING', price: '$512' },
                { name: 'IN FRONT', price: '$315' },
                { name: 'AMAZING REED DECO', price: '$320' },
                { name: 'RASASI', price: '$522' },
                { name: 'GOOD NIGHT', price: '$630' },
                { name: 'DKNY', price: '$605' },
                { name: 'CLOSE TO NATURE', price: '$390' }
            ]; %>
            <% products.forEach(product => { %>
            <div class="bg-gray-50 p-6 rounded-lg text-center hover:shadow-xl hover:-translate-y-2 transition duration-300 cursor-pointer">
                <div class="w-full h-40 bg-gray-200 rounded mb-4 flex items-center justify-center">
                    <svg class="w-20 h-20 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6z"/>
                    </svg>
                </div>
                <div class="text-xs text-gray-500 uppercase tracking-wide mb-1"><%= product.name %></div>
                <div class="text-lg font-bold text-gray-800"><%= product.price %></div>
            </div>
            <% }); %>
        </div>
    </section>

    <section class="bg-gradient-to-br from-gray-100 to-gray-200 py-20 px-6 md:px-12">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-center gap-16">
            <div class="relative">
                <div class="absolute -top-4 -right-4 w-20 h-20 bg-gray-900 text-white rounded-full flex flex-col items-center justify-center text-xs font-bold shadow-lg">
                    <span>SAVE</span>
                    <span class="text-2xl">30%</span>
                </div>
                <div class="w-64 h-80 bg-gray-800 rounded-lg shadow-2xl flex items-center justify-center">
                    <svg class="w-32 h-32 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6z"/>
                    </svg>
                </div>
            </div>
            <div class="text-center md:text-left">
                <h2 class="text-4xl md:text-5xl font-bold mb-4">Limited Time Offer</h2>
                <p class="text-xl text-gray-600 mb-8">Grab it Before it's Gone!</p>
                <a href="/shop" class="inline-block px-10 py-3 bg-gray-900 text-white rounded hover:bg-gray-700 transition duration-300 font-semibold shadow-lg">SHOP NOW</a>
            </div>
        </div>
    </section>

    <!-- ✅ Include Footer Partial -->
    <%- include('./partial/footer.ejs') %>

</body>
</html>
