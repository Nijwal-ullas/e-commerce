<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ruhe Collection - Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>

  <body class="bg-gray-100">
    <%- include('../partials/user/header') %>

    <main class="flex flex-col items-center justify-start min-h-screen bg-gray-100 px-4 pt-20 overflow-y-auto">
      <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 border border-gray-200 mb-8">
        <h2 class="text-center text-xl font-semibold mb-6">
          Register as a New User
        </h2>

        <form id="registerForm" novalidate>
          <div class="mb-4">
            <label for="name" class="block text-gray-700 mb-1">Name</label>
            <input
              type="text"
              id="name"
              placeholder="Enter your name"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <p id="nameError" class="text-red-500 text-sm mt-1 hidden"></p>
          </div>

          <div class="mb-4">
            <label for="email" class="block text-gray-700 mb-1">Email</label>
            <input
              type="email"
              id="email"
              placeholder="Enter your email"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <p id="emailError" class="text-red-500 text-sm mt-1 hidden"></p>
          </div>

          <div class="mb-4">
            <label for="phone" class="block text-gray-700 mb-1">Phone</label>
            <input
              type="text"
              maxlength="10"
              id="phone"
              oninput="this.value = this.value.replace(/[^0-9]/g, '')"
              placeholder="Enter your phone number"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <p id="phoneError" class="text-red-500 text-sm mt-1 hidden"></p>
          </div>

          <div class="mb-4 relative">
            <label for="password" class="block text-gray-700 mb-1">Password</label>
            <input
              type="password"
              id="password"
              placeholder="Enter password"
              minlength="6"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <button type="button" onclick="togglePassword()" class="absolute right-3 top-9 text-gray-500">
              <i class="fas fa-eye"></i>
            </button>
            <p id="passwordError" class="text-red-500 text-sm mt-1 hidden"></p>
          </div>

          <div class="mb-4 relative">
            <label for="confirmPassword" class="block text-gray-700 mb-1">Confirm Password</label>
            <input
              type="password"
              id="confirmPassword"
              placeholder="Re-enter password"
              minlength="6"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
            <button type="button" onclick="toggleConfirmPassword()" class="absolute right-3 top-9 text-gray-500">
              <i class="fas fa-eye"></i>
            </button>
            <p id="confirmError" class="text-red-500 text-sm mt-1 hidden"></p>
          </div>

          <div class="mb-4">
            <label for="referral" class="block text-gray-700 mb-1">Referral Code (optional)</label>
            <input
              type="text"
              id="referral"
              placeholder="Enter referral code"
              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
            />
          </div>

          <div id="responseMessage" class="hidden mb-4 text-center text-sm font-medium text-red-500"></div>

          <button
            type="submit"
            id="registerBtn"
            class="w-full bg-red-600 text-white py-2 rounded hover:bg-red-700 transition mb-4"
          >
            Register
          </button>

          <div class="text-center text-sm mb-4">
            <span class="text-gray-600">Already have an account? </span>
            <a href="/login" class="text-red-600 hover:underline">Login</a>
          </div>

          <a
            href="/auth/google"
            class="w-full border border-gray-300 py-2 rounded hover:bg-gray-50 transition flex items-center justify-center text-gray-700"
          >
            <img
              src="https://www.google.com/favicon.ico"
              alt="Google"
              class="w-5 h-5 mr-2"
            />
            Login with Google
          </a>
        </form>
      </div>
    </main>

    <%- include('../partials/user/footer') %>

    <script>
      function togglePassword() {
        const input = document.getElementById("password");
        input.type = input.type === "password" ? "text" : "password";
      }

      function toggleConfirmPassword() {
        const input = document.getElementById("confirmPassword");
        input.type = input.type === "password" ? "text" : "password";
      }

      const registerForm = document.getElementById("registerForm");
      const responseMessage = document.getElementById("responseMessage");
      const registerBtn = document.getElementById("registerBtn");

      registerForm.addEventListener("submit", async (e) => {
        e.preventDefault();

        const name = document.getElementById("name").value.trim();
        const email = document.getElementById("email").value.trim();
        const phone = document.getElementById("phone").value.trim();
        const password = document.getElementById("password").value.trim();
        const confirm = document.getElementById("confirmPassword").value.trim();
        const referral = document.getElementById("referral").value.trim();

        const nameError = document.getElementById("nameError");
        const emailError = document.getElementById("emailError");
        const phoneError = document.getElementById("phoneError");
        const passwordError = document.getElementById("passwordError");
        const confirmError = document.getElementById("confirmError");

        [nameError, emailError, phoneError, passwordError, confirmError].forEach(el => el.classList.add("hidden"));
        responseMessage.classList.add("hidden");

        let valid = true;

        if (!name) { nameError.textContent = "Name is required"; nameError.classList.remove("hidden"); valid = false; }
        if (!email) { emailError.textContent = "Email is required"; emailError.classList.remove("hidden"); valid = false; }
        else if (!/^[^ ]+@[^ ]+\.[a-z]{2,3}$/.test(email)) { emailError.textContent = "Invalid email"; emailError.classList.remove("hidden"); valid = false; }

        if (!phone) { phoneError.textContent = "Phone is required"; phoneError.classList.remove("hidden"); valid = false; }
        else if (phone.length !== 10) { phoneError.textContent = "Phone must be 10 digits"; phoneError.classList.remove("hidden"); valid = false; }

        if (!password) { passwordError.textContent = "Password is required"; passwordError.classList.remove("hidden"); valid = false; }
        else if (password.length < 6) { passwordError.textContent = "Password must be at least 6 characters"; passwordError.classList.remove("hidden"); valid = false; }

        if (!confirm) { confirmError.textContent = "Confirm password is required"; confirmError.classList.remove("hidden"); valid = false; }
        else if (confirm !== password) { confirmError.textContent = "Passwords do not match"; confirmError.classList.remove("hidden"); valid = false; }

        if (!valid) return;

        registerBtn.disabled = true;
        registerBtn.textContent = "Registering...";

        try {
          const res = await axios.post("/register", { name, email, phone, password, confirmPassword: confirm, referral });

          if (res.data.success) {
            window.location.href = res.data.redirectUrl;
          } else {
            responseMessage.textContent = res.data.message || "Registration failed";
            responseMessage.classList.remove("hidden");
          }
        } catch (error) {
          responseMessage.textContent = error.response?.data?.message || "An unexpected error occurred";
          responseMessage.classList.remove("hidden");
        } finally {
          registerBtn.disabled = false;
          registerBtn.textContent = "Register";
        }
      });
    </script>
  </body>
</html>
