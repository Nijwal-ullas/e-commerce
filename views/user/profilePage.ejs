<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rube Collection - My Profile</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Lato:wght@300;400&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
      body {
        font-family: "Lato", sans-serif;
      }

      .profile-image-preview {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #e5e7eb;
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <%- include("../partials/user/header.ejs") %>

    <div class="max-w-full mx-auto px-6 lg:px-12 py-8">
      <div class="flex flex-col lg:flex-row gap-8">
            <div class="lg:w-64 flex-shrink-0">
                <div class="sticky top-24">
                    <%- include("../partials/user/profileSidebar.ejs") %>
                </div>
            </div>

        <div class="flex-1">
          <div class="bg-gray-100 rounded-lg p-6 lg:p-8">
            <div class="bg-white rounded-lg shadow-sm p-6 lg:p-10">
              <div class="flex items-center justify-between mb-8">
                <h2 class="text-xl font-medium text-gray-800">My Profile</h2>
                <a 
                  href="/profile/edit"
                  class="px-6 py-2 rounded-full bg-red-700 text-white text-sm hover:bg-red-800 whitespace-nowrap"
                >
                  <i class="fas fa-edit mr-2"></i>Edit Profile
                </a>
              </div>

              <div class="space-y-8">
                <div class="mb-8">
                  <label class="block text-sm font-medium text-gray-700 mb-4 text-center">Profile Picture</label>
                  <div class="flex justify-center">
                    <img 
                      src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                      alt="Profile Picture"
                      class="profile-image-preview" 
                      onerror="this.src='/images/default-avatar.png'"
                    />
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">Email</label>
                  <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
                    <div class="flex-1 w-full px-5 py-3 border border-gray-300 bg-gray-50 rounded-full">
                      <i class="fas fa-envelope mr-2 text-gray-400"></i>
                      <%= user.email || 'Not provided' %>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-2">
                      <a
                        href="/profile/change-email"
                        class="px-5 py-2 rounded-full bg-red-700 text-white text-sm hover:bg-red-800 whitespace-nowrap text-center"
                      >
                        <i class="fas fa-envelope mr-1"></i>Change Email
                      </a>
                      <a
                        href="/profile/change-password"
                        class="px-5 py-2 rounded-full bg-gray-700 text-white text-sm hover:bg-gray-800 whitespace-nowrap text-center"
                      >
                        <i class="fas fa-lock mr-1"></i>Change Password
                      </a>
                    </div>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">Name</label>
                  <div class="w-full px-5 py-3 border border-gray-300 rounded-full bg-gray-50 flex items-center">
                    <i class="fas fa-user mr-2 text-gray-400"></i>
                    <%= user.name || 'Not provided' %>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">Mobile</label>
                  <div class="w-full px-5 py-3 border border-gray-300 rounded-full bg-gray-50 flex items-center">
                    <i class="fas fa-phone mr-2 text-gray-400"></i>
                    <%= user.phone || 'Not provided' %>
                  </div>
                </div>

                <% if (user.address || user.city || user.state) { %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">Address</label>
                  <div class="w-full px-5 py-3 border border-gray-300 rounded-lg bg-gray-50">
                    <div class="flex items-start">
                      <i class="fas fa-map-marker-alt mr-2 text-gray-400 mt-1"></i>
                      <div>
                        <% if (user.address) { %>
                          <p class="text-gray-700"><%= user.address %></p>
                        <% } %>
                        <% if (user.city || user.state || user.pincode) { %>
                          <p class="text-gray-600 text-sm mt-1">
                            <%= user.city || '' %>
                            <%= user.city && user.state ? ', ' : '' %>
                            <%= user.state || '' %>
                            <%= user.pincode ? ' - ' + user.pincode : '' %>
                          </p>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../partials/user/footer.ejs") %>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const profileImage = document.querySelector('.profile-image-preview');
        if (profileImage) {
          profileImage.onerror = function() {
            this.src = '/images/default-avatar.png';
          };
        }
      });
    </script>
  </body>
</html>