<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Email - Rube Collection</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Lato:wght@300;400&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Lato", sans-serif;
      }
      .heading-font {
        font-family: "Playfair Display", serif;
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <%- include("../partials/user/header.ejs") %>

    <div class="max-w-full mx-auto px-6 lg:px-12 py-8">
      <div class="flex flex-col lg:flex-row gap-8">
        <%- include("../partials/user/profileSidebar.ejs") %>

        <div class="flex-1">
          <div class="bg-gray-100 rounded-lg p-6 lg:p-8">
            <div class="bg-white rounded-lg shadow-sm p-6 lg:p-10">
              <div class="mb-6">
                <a
                  href="/profile"
                  class="inline-flex items-center text-red-700 hover:text-red-800 font-medium text-sm"
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 19l-7-7 7-7"
                    />
                  </svg>
                  Back to Profile
                </a>
              </div>

              <h2 class="text-xl font-medium text-gray-800 mb-2">
                Change Email
              </h2>
              <p class="text-sm text-gray-600 mb-8">
                Update your email address. We'll send a verification link to
                your new email.
              </p>

              <% if (locals.message) { %>
              <div
                class="mb-6 p-4 bg-green-50 border border-green-200 text-green-800 rounded-lg flex items-start"
              >
                <svg
                  class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span><%= message %></span>
              </div>
              <% } %> <% if (locals.error) { %>
              <div
                class="mb-6 p-4 bg-red-50 border border-red-200 text-red-800 rounded-lg flex items-start"
              >
                <svg
                  class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span><%= error %></span>
              </div>
              <% } %>

              <form id="changeEmailForm" class="space-y-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3"
                    >Current Email</label
                  >
                  <input
                    type="text"
                    value="<%= user.email || '' %>"
                    disabled
                    class="w-full px-5 py-3 border border-gray-300 rounded-full bg-gray-50 text-gray-500 cursor-not-allowed"
                  />
                  <p class="text-xs text-gray-500 mt-2">
                    This is your current registered email address
                  </p>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">
                    New Email <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="text"
                    name="newEmail"
                    placeholder="Enter your new email address"
                    class="w-full px-5 py-3 border border-gray-300 rounded-full focus:ring-2 focus:ring-red-700 focus:outline-none"
                  />
                  <p
                    id="newEmailError"
                    class="text-red-600 text-xs mt-2 hidden"
                  ></p>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">
                    Confirm New Email <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="text"
                    name="confirmEmail"
                    placeholder="Re-enter your new email address"
                    class="w-full px-5 py-3 border border-gray-300 rounded-full focus:ring-2 focus:ring-red-700 focus:outline-none"
                  />
                  <p
                    id="confirmEmailError"
                    class="text-red-600 text-xs mt-2 hidden"
                  ></p>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-3">
                    Current Password <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="password"
                    name="currentPassword"
                    placeholder="Enter your current password"
                    class="w-full px-5 py-3 border border-gray-300 rounded-full focus:ring-2 focus:ring-red-700 focus:outline-none"
                  />
                  <p
                    id="passwordError"
                    class="text-red-600 text-xs mt-2 hidden"
                  ></p>
                </div>

                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                  <div class="flex items-start">
                    <svg
                      class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <div class="text-sm text-blue-800">
                      <p class="font-semibold mb-1">Important Information:</p>
                      <ul class="list-disc list-inside space-y-1">
                        <li>
                          A verification email will be sent to your new email
                          address
                        </li>
                        <li>Your email won't change until you verify it</li>
                        <li>
                          You can continue using your current email until
                          verification
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>

                <div class="flex flex-col sm:flex-row justify-end gap-4 pt-6">
                  <a
                    href="/profile"
                    class="px-8 py-3 border border-gray-300 text-gray-700 rounded-md font-medium hover:bg-gray-50 transition text-center"
                  >
                    Cancel
                  </a>
                  <button
                    type="submit"
                    class="px-8 py-3 bg-red-700 hover:bg-red-800 text-white rounded-md font-medium transition"
                  >
                    Update Email
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../partials/user/footer.ejs") %>

    <script>
      const form = document.getElementById("changeEmailForm");

      const newEmailInput = document.querySelector('input[name="newEmail"]');
      const confirmEmailInput = document.querySelector(
        'input[name="confirmEmail"]'
      );
      const passwordInput = document.querySelector(
        'input[name="currentPassword"]'
      );

      const newEmailError = document.getElementById("newEmailError");
      const confirmEmailError = document.getElementById("confirmEmailError");
      const passwordError = document.getElementById("passwordError");

      function clearErrors() {
        newEmailError.classList.add("hidden");
        confirmEmailError.classList.add("hidden");
        passwordError.classList.add("hidden");

        newEmailError.textContent = "";
        confirmEmailError.textContent = "";
        passwordError.textContent = "";
      }

      form.addEventListener("submit", async function (e) {
        e.preventDefault();
        clearErrors();

        const newEmail = newEmailInput.value.trim();
        const confirmEmail = confirmEmailInput.value.trim();
        const currentPassword = passwordInput.value.trim();

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        let hasError = false;

        if (!emailRegex.test(newEmail)) {
          newEmailError.textContent = "Please enter a valid email address.";
          newEmailError.classList.remove("hidden");
          hasError = true;
        }

        if (newEmail !== confirmEmail) {
          confirmEmailError.textContent =
            "New email and Confirm email do not match.";
          confirmEmailError.classList.remove("hidden");
          hasError = true;
        }

        if (!currentPassword) {
          passwordError.textContent = "Please enter your current password.";
          passwordError.classList.remove("hidden");
          hasError = true;
        }

        if (hasError) return;

        try {
          const response = await axios.post("/profile/change-email", {
            newEmail,
            confirmEmail,
            currentPassword,
          });

          if (response.data.success) {
            window.location.href = response.data.redirectUrl;
          }
        } catch (err) {
          const errorMsg =
            err.response?.data?.message || "Something went wrong";

          passwordError.textContent = errorMsg;
          passwordError.classList.remove("hidden");
        }
      });
    </script>
  </body>
</html>
