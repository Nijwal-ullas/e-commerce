                  <span class="font-medium <%= order.deliveryCharge === 0 ? 'text-green-600' : 'text-gray-800' %>">
                    <%= order.deliveryCharge === 0 ? 'FREE' : '₹' + parseFloat(order.deliveryCharge || 0).toFixed(2) %>
                  </span>
                </div>

                <div class="pt-3 border-t border-gray-200">
                  <div class="flex justify-between">
                    <span class="font-semibold text-gray-800">Total Amount</span>
                    <span class="font-bold text-lg text-gray-900">₹<%= parseFloat(order.finalAmount || order.totalPrice || 0).toFixed(2) %></span>
                  </div>
                </div>
              </div>

              <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-xs text-gray-500">
                  <i class="fas fa-info-circle mr-1"></i>
                  Payment Method:
                  <span class="font-medium text-gray-700 capitalize"><%= order.paymentMethod || order.payment || 'COD' %></span>
                </p>
                <% if (order.paymentStatus) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <i class="fas fa-credit-card mr-1"></i>
                    Payment Status:
                    <span class="font-medium capitalize <%= order.paymentStatus.toLowerCase() === 'paid' ? 'text-green-600' : 
                                                           order.paymentStatus.toLowerCase() === 'refunded' ? 'text-purple-600' : 
                                                           'text-orange-600' %>">
                      <%= order.paymentStatus %>
                    </span>
                  </p>
                <% } %>
              </div>
            </div>

            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">
                <i class="fas fa-map-marker-alt mr-2 text-red-700"></i>Shipping Address
              </h2>

              <% if (shippingAddress && typeof shippingAddress === 'object') { %>
                <div class="text-sm space-y-3">
                  <% if (shippingAddress.addressType) { %>
                    <div class="mb-2">
                      <span class="text-xs px-3 py-1 bg-blue-100 text-blue-700 rounded-full capitalize">
                        <i class="fas fa-tag mr-1"></i>
                        <%= shippingAddress.addressType %> Address
                      </span>
                    </div>
                  <% } %>

                  <div class="flex items-start">
                    <i class="fas fa-user mt-1 mr-3 text-gray-400"></i>
                    <div>
                      <p class="font-medium text-gray-800">
                        <%= shippingAddress.name || 'Customer' %>
                      </p>
                      <div class="flex flex-wrap gap-2 mt-1">
                        <span class="text-gray-600">
                          <i class="fas fa-phone mr-1"></i>
                          <%= shippingAddress.phone || 'No phone' %>
                        </span>
                        <% if (shippingAddress.alterPhone) { %>
                          <span class="text-gray-600">
                            <i class="fas fa-phone-alt mr-1"></i>
                            <%= shippingAddress.alterPhone %>
                          </span>
                        <% } %>
                      </div>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <i class="fas fa-home mt-1 mr-3 text-gray-400"></i>
                    <div>
                      <p class="text-gray-600">
                        <%= shippingAddress.flatNumber || 'Not specified' %>
                        <% if (shippingAddress.streetName) { %>
                          , <%= shippingAddress.streetName %>
                        <% } %>
                      </p>

                      <% if (shippingAddress.landmark) { %>
                        <p class="text-gray-600 mt-1">
                          <i class="fas fa-map-pin mr-1"></i>
                          Landmark: <%= shippingAddress.landmark %>
                        </p>
                      <% } %>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-400"></i>
                    <div>
                      <p class="text-gray-600">
                        <%= shippingAddress.city || 'Not specified' %>
                        <% if (shippingAddress.state) { %>
                          , <%= shippingAddress.state %>
                        <% } %>
                        <% if (shippingAddress.pincode) { %>
                          - <%= shippingAddress.pincode %>
                        <% } %>
                      </p>
                      <% if (shippingAddress.country && shippingAddress.country !== 'India') { %>
                        <p class="text-gray-600 mt-1"><%= shippingAddress.country %></p>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% } else { %>
                <div class="text-center py-4">
                  <i class="fas fa-map-marker-alt text-3xl text-gray-300 mb-2"></i>
                  <p class="text-gray-500">No shipping address information available</p>
                  <p class="text-sm text-gray-400 mt-1">Please contact customer support for assistance</p>
                </div>
              <% } %>
            </div>

            <% 
              const canCancelOrder = ['pending', 'processing'].includes((order.status || order.orderStatus || '').toLowerCase()); 
            %>

            <% 
              const invoiceDownloads = ['delivered', 'cancelled' , 'returned'].includes((order.status || order.orderStatus || '').toLowerCase()); 
            %>

            <% if (invoiceDownloads) { %>
                      <a
              href="/order/invoice/<%= order._id %>"
              target="_blank"
              class="flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                </path>
              </svg>
              Download Invoice
            </a>    
              <% } %>
            
          

            <% if (canCancelOrder) { %>
              <button
                onclick="cancelEntireOrder('<%= order._id %>')"
                class="w-full bg-red-700 text-white py-3 rounded-md hover:bg-red-800 transition font-medium"
              >
                <i class="fas fa-times-circle mr-2"></i>Cancel Entire Order
              </button>
            <% } %>

            <a
              href="/orders"
              class="block w-full text-center border border-gray-300 py-3 rounded-md hover:bg-gray-50 transition font-medium text-gray-700"
            >
              <i class="fas fa-list mr-2"></i>View All Orders
            </a>
          </div>
        </div>

        <% 
          const canRequestReturn = order.orderStatus === 'Delivered' && !order.orderedItem.some(item => item.returnReason);
          const hasReturnRequest = order.orderStatus === 'Return Requested';
          const isReturned = order.orderStatus === 'Returned';
        %>

        <% if (canRequestReturn) { %>
        <div class="mt-6 border border-gray-300 rounded-lg p-6 bg-gray-50">
          <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-undo-alt mr-2 text-blue-600"></i>Request Return
          </h3>
          
          <p class="text-sm text-gray-600 mb-4">
            Not satisfied with your order? You can request to return the entire order within 7 days of delivery.
          </p>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Return Reason *
              </label>
              <select id="returnReason" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
                <option value="">Select a reason</option>
                <option value="Product damaged">Product damaged/defective</option>
                <option value="Wrong item received">Wrong item received</option>
                <option value="Quality not as expected">Quality not as expected</option>
                <option value="Size/Color mismatch">Size/Color mismatch</option>
                <option value="Item not as described">Item not as described</option>
                <option value="Changed my mind">Changed my mind</option>
                <option value="Other">Other reason</option>
              </select>
              
              <div id="otherReasonContainer" class="mt-3 hidden">
                <textarea id="otherReason" 
                          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm" 
                          rows="3" 
                          placeholder="Please specify your reason..."></textarea>
              </div>
            </div>

            <button onclick="submitFullOrderReturn('<%= order._id %>')" 
                    class="w-full bg-red-600 text-white py-3 rounded-md hover:bg-red-700 transition font-medium text-sm">
              <i class="fas fa-undo-alt mr-2"></i>Return Entire Order
            </button>

            <p class="text-xs text-gray-500 text-center">
              <i class="fas fa-info-circle mr-1"></i>
              Return requests will be reviewed by our team within 24-48 hours. Refunds will be processed upon approval.
            </p>
          </div>
        </div>
        <% } %>

        <% if (hasReturnRequest) { %>
        <div class="mt-6 border border-yellow-300 rounded-lg p-6 bg-yellow-50">
          <div class="flex items-center mb-4">
            <i class="fas fa-clock text-yellow-600 text-xl mr-3"></i>
            <h3 class="text-lg font-semibold text-yellow-800">Return Request Submitted</h3>
          </div>
          
          <p class="text-sm text-yellow-700 mb-4">
            Your return request is under review. Our team will respond within 24-48 hours.
          </p>

          <div class="space-y-3">
            <% order.orderedItem.filter(item => item.returnReason).forEach((item, index) => { %>
            <div class="p-3 bg-white rounded-lg border border-yellow-200">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gray-100 rounded mr-3 flex-shrink-0">
                  <% 
                    let returnItemImage = '/images/placeholder.png';
                    if (item.productId && item.productId.images && item.productId.images.length > 0) {
                      returnItemImage = item.productId.images[0];
                    }
                  %>
                  <img src="<%= returnItemImage %>" 
                       alt="<%= item.productId?.productName || 'Product' %>" 
                       class="w-full h-full object-cover rounded"
                       onerror="this.src='/images/placeholder.png'">
                </div>
                <div class="flex-1">
                  <p class="font-medium text-gray-800"><%= item.productId?.productName || 'Product' %></p>
                  <p class="text-sm text-gray-600">
                    <%= item.ml || 'N/A' %>ml × <%= item.quantity %>
                    - ₹<%= (item.price * item.quantity).toFixed(2) %>
                  </p>
                  <p class="text-sm text-gray-700 mt-1">
                    <span class="font-medium">Reason:</span> <%= item.returnReason %>
                  </p>
                </div>
                <span class="text-xs px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full font-medium">
                  Pending Approval
                </span>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
        <% } %>

        <% if (isReturned) { %>
        <div class="mt-6 border border-green-300 rounded-lg p-6 bg-green-50">
          <div class="flex items-center mb-4">
            <i class="fas fa-check-circle text-green-600 text-xl mr-3"></i>
            <h3 class="text-lg font-semibold text-green-800">Order Returned & Refunded</h3>
          </div>
          
          <p class="text-sm text-green-700 mb-4">
            Your return has been processed successfully. Refund has been issued to your original payment method.
          </p>

          <% if (order.metadata && order.metadata.refundAmount) { %>
          <div class="p-4 bg-white rounded-lg border border-green-200">
            <h4 class="font-medium text-green-800 mb-3">Refund Details</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-gray-600">Refund Amount:</span>
                <p class="font-bold text-green-700 text-lg">₹<%= order.metadata.refundAmount.toFixed(2) %></p>
              </div>
              <div>
                <span class="text-gray-600">Refund Date:</span>
                <p class="font-medium text-gray-800">
                  <%= order.metadata.refundApprovedAt ? new Date(order.metadata.refundApprovedAt).toLocaleDateString() : 'N/A' %>
                </p>
              </div>
              <% if (order.metadata.adminNotes) { %>
              <div class="md:col-span-2">
                <span class="text-gray-600">Admin Notes:</span>
                <p class="text-gray-700 mt-1"><%= order.metadata.adminNotes %></p>
              </div>
              <% } %>
            </div>
          </div>
          <% } %>

          <div class="mt-4 space-y-3">
            <% order.orderedItem.filter(item => item.status === 'Returned').forEach((item, index) => { %>
            <div class="p-3 bg-white rounded-lg border border-green-200">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-gray-100 rounded mr-3 flex-shrink-0">
                  <% 
                    let returnedItemImage = '/images/placeholder.png';
                    if (item.productId && item.productId.images && item.productId.images.length > 0) {
                      returnedItemImage = item.productId.images[0];
                    }
                  %>
                  <img src="<%= returnedItemImage %>" 
                       alt="<%= item.productId?.productName || 'Product' %>" 
                       class="w-full h-full object-cover rounded"
                       onerror="this.src='/images/placeholder.png'">
                </div>
                <div>
                  <p class="font-medium text-gray-800 text-sm"><%= item.productId?.productName || 'Product' %></p>
                  <p class="text-xs text-gray-600">Quantity: <%= item.quantity %></p>
                </div>
                <div class="ml-auto">
                  <span class="text-xs px-3 py-1 bg-green-100 text-green-800 rounded-full font-medium">
                    Returned
                  </span>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%- include("../partials/user/footer.ejs") %>

   <script>
  document.addEventListener('DOMContentLoaded', function() {
    const returnReasonSelect = document.getElementById('returnReason');
    if (returnReasonSelect) {
      returnReasonSelect.addEventListener('change', function(e) {
        const otherReasonContainer = document.getElementById('otherReasonContainer');
        if (e.target.value === 'Other') {
          otherReasonContainer.classList.remove('hidden');
        } else {
          otherReasonContainer.classList.add('hidden');
        }
      });
    }
  });

  async function submitFullOrderReturn(orderId) {
    const returnReason = document.getElementById('returnReason').value;
    const otherReason = document.getElementById('otherReason')?.value || '';
    
    if (!returnReason) {
      Swal.fire({
        icon: 'warning',
        title: 'Select Reason',
        text: 'Please select a return reason',
        confirmButtonColor: '#3085d6'
      });
      return;
    }
    
    if (returnReason === 'Other' && !otherReason.trim()) {
      Swal.fire({
        icon: 'warning',
        title: 'Specify Reason',
        text: 'Please specify your return reason',
        confirmButtonColor: '#3085d6'
      });
      return;
    }
    
    const finalReason = returnReason === 'Other' ? otherReason : returnReason;
    
    const result = await Swal.fire({
      title: 'Return Entire Order?',
      html: `
        <div class="text-left">
          <p class="text-gray-600 mb-3">Are you sure you want to return all items in this order?</p>
          <p class="text-sm text-gray-500"><strong>Reason:</strong> ${finalReason}</p>
          <p class="text-xs text-gray-400 mt-2">Once submitted, you cannot modify this request.</p>
        </div>
      `,
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, Return All',
      cancelButtonText: 'Cancel'
    });
    
    if (!result.isConfirmed) return;
    
    try {
      Swal.fire({
        title: 'Submitting...',
        allowOutsideClick: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });
      
      const response = await axios.post(`/orders/${orderId}/return`, {
        reason: finalReason,
        returnAll: true
      });
      
      Swal.close();
      
      if (response.data.success) {
        Swal.fire({
          icon: 'success',
          title: 'Request Submitted!',
          text: response.data.message,
          confirmButtonColor: '#3085d6'
        }).then(() => {
          window.location.reload();
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: response.data.message,
          confirmButtonColor: '#d33'
        });
      }
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: error.response?.data?.message || 'Failed to submit return request',
        confirmButtonColor: '#d33'
      });
    }
  }

  function openCancelModal(orderId, itemId) {
    Swal.fire({
      title: "Cancel Order Item",
      html: `
      <div class="text-left">
        <label class="block text-sm font-medium text-gray-700 mb-2">Reason (Optional)</label>
        <textarea id="cancelReason" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-red-600 focus:border-red-600" placeholder="Write your reason..." rows="3"></textarea>
      </div>
    `,
      showCancelButton: true,
      confirmButtonText: "Submit",
      cancelButtonText: "Close",
      confirmButtonColor: "#b91c1c",
      cancelButtonColor: "#6b7280",
      showLoaderOnConfirm: true,
      preConfirm: () => {
        return {
          reason: document.getElementById("cancelReason").value || "",
          itemId: itemId,
        };
      },
      allowOutsideClick: () => !Swal.isLoading(),
    }).then((result) => {
      if (result.isConfirmed) {
        const { reason, itemId } = result.value;

        axios
          .post(
            `/orders/cancel/${orderId}`,
            {
              itemId: itemId,
              reason: reason,
            },
            {
              headers: { "Content-Type": "application/json" },
            }
          )
          .then((res) => {
            if (res.data.success) {
              Swal.fire({
                icon: "success",
                title: "Cancelled Successfully",
                text: res.data.message,
                timer: 2000,
                showConfirmButton: false,
              }).then(() => {
                window.location.reload();
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: res.data.message,
                confirmButtonColor: "#b91c1c",
              });
            }
          })
          .catch((error) => {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: error.response?.data?.message || "Something went wrong",
              confirmButtonColor: "#b91c1c",
            });
          });
      }
    });
  }

  function cancelEntireOrder(orderId) {
    Swal.fire({
      title: "Cancel Entire Order?",
      html: `
      <div class="text-left">
        <p class="text-sm text-gray-600 mb-3">This will cancel all items in this order.</p>
        <label class="block text-sm font-medium text-gray-700 mb-2">Reason (Optional)</label>
        <textarea id="cancelOrderReason" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-red-600 focus:border-red-600" placeholder="Write your reason..." rows="3"></textarea>
      </div>
    `,
      showCancelButton: true,
      confirmButtonText: "Yes, Cancel Order",
      cancelButtonText: "No, Keep It",
      confirmButtonColor: "#b91c1c",
      cancelButtonColor: "#6b7280",
      showLoaderOnConfirm: true,
      preConfirm: () => {
        return {
          reason: document.getElementById("cancelOrderReason").value || "",
          cancelAll: true,
        };
      },
      allowOutsideClick: () => !Swal.isLoading(),
    }).then((result) => {
      if (result.isConfirmed) {
        const { reason, cancelAll } = result.value;

        axios
          .post(
            `/orders/cancel/${orderId}`,
            {
              reason: reason,
              cancelAll: cancelAll,
            },
            {
              headers: { "Content-Type": "application/json" },
            }
          )
          .then((res) => {
            if (res.data.success) {
              Swal.fire({
                icon: "success",
                title: "Order Cancelled",
                text: res.data.message,
                timer: 2000,
                showConfirmButton: false,
              }).then(() => {
                window.location.reload();
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: res.data.message,
                confirmButtonColor: "#b91c1c",
              });
            }
          })
          .catch((error) => {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: error.response?.data?.message || "Something went wrong",
              confirmButtonColor: "#b91c1c",
            });
          });
      }
    });
  }
</script>
  </body>
</html>