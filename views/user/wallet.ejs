<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wallet - RnBB Collection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<body class="bg-gray-50">
    <%- include("../partials/user/header.ejs") %>

    <div class="max-w-full mx-auto px-6 lg:px-12 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
            <%- include("../partials/user/profileSidebar.ejs") %>

            <div class="flex-1">
                <div class="bg-gray-100 rounded-lg p-6 lg:p-8">
                    
                    <div class="bg-gradient-to-r from-red-600 to-red-700 rounded-xl shadow-lg p-8 mb-8 text-white">
                        <div class="flex justify-between items-start mb-6">
                            <div>
                                <p class="text-red-100 text-sm mb-2">Available Balance</p>
                                <h2 class="text-4xl font-bold" id="walletBalance">₹<%= wallet?.balance?.toFixed(2) || '0.00' %></h2>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-full p-3">
                                <i class="fas fa-wallet text-3xl"></i>
                            </div>
                        </div>
                        <button onclick="openAddMoneyModal()" class="bg-white text-red-600 px-6 py-2 rounded-lg font-semibold hover:bg-red-50 transition-colors">
                            <i class="fas fa-plus mr-2"></i>Add Money
                        </button>
                    </div>

                    <div class="bg-white rounded-lg shadow-sm p-6 lg:p-10">
                        <div class="flex justify-between items-center mb-8">
                            <h2 class="text-xl font-medium text-gray-800">Transaction History</h2>
                            <% if (transactions && transactions.length > 0) { %>
                            <div class="flex gap-2">
                                <select id="filterType" onchange="filterTransactions()" class="px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-red-600">
                                    <option value="all">All Transactions</option>
                                    <option value="credit">Credits</option>
                                    <option value="debit">Debits</option>
                                </select>
                            </div>
                            <% } %>
                        </div>

                        <% if (transactions && transactions.length > 0) { %>
                            <div class="space-y-4" id="transaction-container">
                                <% transactions.forEach(transaction => { %>
                                <div class="border-l-4 <%= transaction.type === 'credit' ? 'border-green-500' : 'border-red-500' %> bg-gray-50 rounded-lg p-5 hover:shadow-md transition-shadow" data-type="<%= transaction.type %>">
                                    <div class="flex justify-between items-start">
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <div class="w-10 h-10 rounded-full <%= transaction.type === 'credit' ? 'bg-green-100' : 'bg-red-100' %> flex items-center justify-center">
                                                    <i class="fas <%= transaction.type === 'credit' ? 'fa-arrow-down text-green-600' : 'fa-arrow-up text-red-600' %>"></i>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-gray-800 capitalize"><%= transaction.type %></h3>
                                                    <p class="text-sm text-gray-500">
                                                        <%= new Date(transaction.createdAt).toLocaleDateString('en-IN', { 
                                                            day: '2-digit', 
                                                            month: 'short', 
                                                            year: 'numeric' 
                                                        }) %> 
                                                        <%= new Date(transaction.createdAt).toLocaleTimeString('en-IN', { 
                                                            hour: '2-digit', 
                                                            minute: '2-digit',
                                                            hour12: true 
                                                        }) %>
                                                    </p>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 text-sm ml-13">
                                               <%= transaction.description %>
                                            </p>
                                            <% if (transaction.orderId) { %>
                                            <p class="text-xs text-gray-400 mt-1 ml-13">
                                                <i class="fas fa-receipt mr-1"></i>Order ID: <%= transaction.orderId %>
                                            </p>
                                            <% } %>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-xl font-bold <%= transaction.type === 'credit' ? 'text-green-600' : 'text-red-600' %>">
                                                <%= transaction.type === 'credit' ? '+' : '-' %>₹<%= transaction.amount?.toFixed(2) || '0.00' %>
                                            </p>
                                          
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>

                            <% if (totalPage > 1) { %>
                                <div class="flex justify-center items-center gap-4 mt-12">
                                    <button onclick="changePage(<%= page - 1 %>)" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors disabled:opacity-50 disabled:cursor-not-allowed" <%= page <= 1 ? 'disabled' : '' %>>
                                        <i class="fas fa-chevron-left mr-1"></i> Previous
                                    </button>

                                    <div class="flex gap-2">
                                        <% for (let i = 1; i <= totalPage; i++) { %>
                                            <button onclick="changePage(<%= i %>)"
                                                class="w-10 h-10 rounded-lg transition-colors <%= i === page ? 'bg-red-600 text-white' : 'bg-gray-200 hover:bg-gray-300' %>">
                                                <%= i %>
                                            </button>
                                        <% } %>
                                    </div>

                                    <button onclick="changePage(<%= page + 1 %>)" class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors disabled:opacity-50 disabled:cursor-not-allowed" <%= page >= totalPage ? 'disabled' : '' %>>
                                        Next <i class="fas fa-chevron-right ml-1"></i>
                                    </button>
                                </div>
                            <% } %>

                        <% } else { %>

                            <div class="text-center py-16">
                                <div class="w-24 h-24 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-6">
                                    <i class="fas fa-receipt text-4xl text-gray-400"></i>
                                </div>
                                <h2 class="text-2xl font-bold text-gray-900 mb-3">No Transactions Yet</h2>
                                <p class="text-gray-600 mb-8">Your transaction history will appear here.</p>
                                <button onclick="openAddMoneyModal()" class="bg-red-600 text-white px-8 py-3 rounded-lg hover:bg-red-700 transition-colors font-semibold">
                                    <i class="fas fa-plus mr-2"></i>Add Money to Wallet
                                </button>
                            </div>

                        <% } %>

                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mt-6">
                        <div class="flex items-start gap-3">
                            <i class="fas fa-info-circle text-blue-600 text-xl mt-1"></i>
                            <div>
                                <h3 class="font-semibold text-blue-900 mb-2">About Your Wallet</h3>
                                <ul class="text-sm text-blue-800 space-y-1">
                                    <li><i class="fas fa-check-circle mr-2"></i>Use your wallet balance for faster checkout</li>
                                    <li><i class="fas fa-check-circle mr-2"></i>Refunds are automatically credited to your wallet</li>
                                    <li><i class="fas fa-check-circle mr-2"></i>Your wallet balance never expires</li>
                                    <li><i class="fas fa-check-circle mr-2"></i>Secure and encrypted transactions</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/user/footer.ejs") %>

    <div id="addMoneyModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 p-6">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-semibold text-gray-800">Add Money to Wallet</h3>
                <button onclick="closeAddMoneyModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <form onsubmit="addMoney(event)">
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Enter Amount</label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 text-lg">₹</span>
                        <input type="number" id="addAmount" min="1" max="50000" step="0.01" 
                            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 text-lg"
                            placeholder="0.00">
                    </div>
                    <p id="emt" class="text-xs text-red-600 mt-2 hidden">
                       please enter an amount
                    </p>
                    <p class="text-xs text-gray-500 mt-2">Minimum: ₹1 | Maximum: ₹50,000</p>
                </div>

                <div class="grid grid-cols-4 gap-2 mb-6">
                    <button type="button" onclick="setAmount(500)" class="py-2 border border-gray-300 rounded-lg hover:border-red-600 hover:text-red-600 transition-colors">
                        ₹500
                    </button>
                    <button type="button" onclick="setAmount(1000)" class="py-2 border border-gray-300 rounded-lg hover:border-red-600 hover:text-red-600 transition-colors">
                        ₹1000
                    </button>
                    <button type="button" onclick="setAmount(2000)" class="py-2 border border-gray-300 rounded-lg hover:border-red-600 hover:text-red-600 transition-colors">
                        ₹2000
                    </button>
                    <button type="button" onclick="setAmount(5000)" class="py-2 border border-gray-300 rounded-lg hover:border-red-600 hover:text-red-600 transition-colors">
                        ₹5000
                    </button>
                </div>

                <button type="submit" class="w-full bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 transition-colors font-semibold">
                    <i class="fas fa-plus mr-2"></i>Add Money
                </button>
            </form>
        </div>
    </div>

    <script>
        const SwalConfig = {
            success: (title, text) => {
                return Swal.fire({
                    title: title,
                    text: text,
                    icon: 'success',
                    confirmButtonColor: '#dc2626'
                });
            },
            error: (title, text) => {
                return Swal.fire({
                    title: title,
                    text: text,
                    icon: 'error',
                    confirmButtonColor: '#dc2626'
                });
            },
            loading: (title = 'Processing...') => {
                Swal.fire({
                    title: title,
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
            },
            close: () => {
                Swal.close();
            }
        };

        function openAddMoneyModal() {
            document.getElementById('addMoneyModal').classList.remove('hidden');
            document.getElementById('addMoneyModal').classList.add('flex');
            document.getElementById('addAmount').value = '';
            document.getElementById('addAmount').focus();
        }

        function closeAddMoneyModal() {
            document.getElementById('addMoneyModal').classList.add('hidden');
            document.getElementById('addMoneyModal').classList.remove('flex');
        }

        function setAmount(amount) {
            document.getElementById('addAmount').value = amount;
        }


async function addMoney(event) {
    event.preventDefault();
    
    const amount = parseFloat(document.getElementById('addAmount').value);
    if (!amount) {
    document.getElementById('emt').classList.remove('hidden');
        return;
    } else {
        document.getElementById('emt').classList.add('hidden');
    }

    
    if (amount < 1 || amount > 50000) {
        SwalConfig.error('Invalid Amount', 'Please enter an amount between ₹1 and ₹50,000');
        return;
    }

    try {
        closeAddMoneyModal();
        SwalConfig.loading('Creating payment order...');
        
        const createOrderResponse = await axios.post('/wallet/create-order', { amount });
        
        if (!createOrderResponse.data.success) {
            throw new Error(createOrderResponse.data.message);
        }

        SwalConfig.close();
        
        const options = {
            key: createOrderResponse.data.key_id,
            amount: createOrderResponse.data.amount,
            currency: createOrderResponse.data.currency,
            name: "Ruhe Collection",
            description: "Wallet Top-up",
            order_id: createOrderResponse.data.razorpayOrderId,
            handler: async function (response) {
                try {
                    SwalConfig.loading('Verifying payment...');
                    
                    const verifyResponse = await axios.post('/wallet/verify-payment', {
                        razorpay_payment_id: response.razorpay_payment_id,
                        razorpay_order_id: response.razorpay_order_id,
                        razorpay_signature: response.razorpay_signature
                    });

                    if (verifyResponse.data.success) {
                        const newBalance = verifyResponse.data.balance;
                        document.getElementById('walletBalance').textContent = '₹' + newBalance.toFixed(2);
                        
                        await SwalConfig.success('Success!', `₹${amount.toFixed(2)} added to your wallet`);
                        window.location.reload();
                    } else {
                        throw new Error(verifyResponse.data.message);
                    }
                } catch (error) {
                    SwalConfig.error('Error', error.message || 'Payment verification failed');
                }
            },
            prefill: {
                name: "<%= user.name %>",
                email: "<%= user.email %>"
            },
            theme: {
                color: "#dc2626"
            },
            modal: {
                ondismiss: async function() {
                    try {
                        await axios.post('/wallet/payment-failed', {
                            razorpay_order_id: createOrderResponse.data.razorpayOrderId
                        });
                    } catch (error) {
                        console.error('Failed to handle payment cancellation:', error);
                    }
                }
            }
        };

        const razorpayInstance = new Razorpay(options);
        razorpayInstance.open();
        
    } catch (error) {
        console.error('Add money error:', error);
        SwalConfig.error(
            'Error', 
            error.response?.data?.message || error.message || 'Failed to create payment order'
        );
    }
}

        function filterTransactions() {
            const filterType = document.getElementById('filterType').value;
            const transactions = document.querySelectorAll('[data-type]');
            
            transactions.forEach(transaction => {
                if (filterType === 'all' || transaction.dataset.type === filterType) {
                    transaction.style.display = 'block';
                } else {
                    transaction.style.display = 'none';
                }
            });
        }

        function changePage(pageNum) {
            if (pageNum < 1 || pageNum > <%= totalPage || 1 %>) return;
            const filterType = document.getElementById('filterType')?.value || 'all';
            window.location.href = `/wallet?page=${pageNum}&filter=${filterType}`;
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeAddMoneyModal();
            }
        });

        document.getElementById('addMoneyModal')?.addEventListener('click', function(event) {
            if (event.target === this) {
                closeAddMoneyModal();
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('Wallet page loaded');
        });
    </script>
</body>
</html>