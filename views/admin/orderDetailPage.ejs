<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      .status-select:disabled {
        background-color: #f3f4f6;
        color: #9ca3af;
        cursor: not-allowed;
      }
      .cancelled-order {
        opacity: 0.7;
        position: relative;
      }
      .cancelled-order::after {
        content: "CANCELLED";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-45deg);
        font-size: 3rem;
        font-weight: bold;
        color: rgba(239, 68, 68, 0.2);
        z-index: 10;
        pointer-events: none;
      }
      .return-request-section {
        border-left: 4px solid #f59e0b;
      }
      .return-approved-section {
        border-left: 4px solid #10b981;
      }
      .return-rejected-section {
        border-left: 4px solid #ef4444;
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <div class="flex h-screen">
      <%- include('../partials/admin/sidebar') %>

      <main class="flex-1 overflow-y-auto">
        <%- include('../partials/admin/header') %>

        <div class="p-6 <%= order.orderStatus === 'Cancelled' || order.orderStatus === 'Returned' ? 'cancelled-order' : '' %>">
          <div class="mb-4">
            <a
              href="/admin/adminOrders"
              class="inline-flex items-center text-gray-600 hover:text-gray-800"
            >
              <i class="fas fa-arrow-left mr-2"></i>
              Back to Orders
            </a>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <div class="flex justify-between items-start">
              <div>
                <h1 class="text-2xl font-semibold text-gray-800 mb-2">
                  Order Details: <%= order.orderId %>
                </h1>
                <p class="text-sm text-gray-500">
                  <%= new Date(order.createdAt).toLocaleString('en-US', { 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric', 
                    hour: 'numeric', 
                    minute: '2-digit', 
                    hour12: true 
                  }) %>
                </p>
              </div>
              <div class="flex items-center gap-3">
                <div class="text-right">
                  <span class="text-sm text-gray-600 block mb-1">Order Status:</span>
                  <div class="flex items-center gap-2">
                    <span id="orderStatusBadge" class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                      <%= order.orderStatus === 'Delivered' ? 'bg-green-100 text-green-800' : 
                         order.orderStatus === 'Shipped' ? 'bg-blue-100 text-blue-800' : 
                         order.orderStatus === 'Processing' ? 'bg-indigo-100 text-indigo-800' : 
                         order.orderStatus === 'Cancelled' ? 'bg-red-100 text-red-800' : 
                         order.orderStatus === 'Returned' ? 'bg-purple-100 text-purple-800' : 
                         order.orderStatus === 'Return Requested' ? 'bg-yellow-100 text-yellow-800' : 
                         order.orderStatus === 'Return Approved' ? 'bg-blue-100 text-blue-800' : 
                         'bg-yellow-100 text-yellow-800' %>">
                      <%= order.orderStatus %>
                      <% if (order.orderStatus === 'Delivered' && order.deliveredDate) { %>
                        <i class="fas fa-check ml-2"></i>
                      <% } %>
                    </span>
                    <% if (order.orderStatus !== 'Cancelled' && order.orderStatus !== 'Returned' && 
                          order.orderStatus !== 'Return Requested' && order.orderStatus !== 'Return Approved') { %>
                    <select
                      id="orderStatusSelect"
                      class="status-select px-3 py-1 text-sm border border-gray-300 rounded focus:outline-none focus:border-blue-400"
                      data-order-id="<%= order._id %>"
                      data-current-status="<%= order.orderStatus %>"
                    >
                    </select>
                    <% } else if (order.orderStatus === 'Return Requested' || order.orderStatus === 'Return Approved') { %>
                    <span class="text-sm text-gray-500 italic">(In Return Process)</span>
                    <% } else { %>
                    <span class="text-sm text-gray-500 italic">(Cannot update)</span>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            
            <% if (order.orderStatus === 'Return Requested' || order.orderStatus === 'Return Approved') { %>
            <div class="mt-4 p-4 <%= order.orderStatus === 'Return Requested' ? 'return-request-section bg-yellow-50' : 
                                         order.orderStatus === 'Return Approved' ? 'return-approved-section bg-blue-50' : '' %> rounded">
              <div class="flex items-start">
                <i class="fas <%= order.orderStatus === 'Return Requested' ? 'fa-clock text-yellow-600' : 
                               'fa-check-circle text-blue-600' %> text-xl mr-3 mt-1"></i>
                <div class="flex-1">
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="font-semibold <%= order.orderStatus === 'Return Requested' ? 'text-yellow-800' : 
                                                     'text-blue-800' %>">
                        <% if (order.orderStatus === 'Return Requested') { %>
                          Return Request Pending
                        <% } else { %>
                          Return Approved - Ready for Refund
                        <% } %>
                      </h3>
                      <p class="text-sm <%= order.orderStatus === 'Return Requested' ? 'text-yellow-700' : 
                                             'text-blue-700' %> mt-1">
                        <% if (order.orderStatus === 'Return Requested') { %>
                          Customer has requested to return this order. Please review and take action.
                        <% } else { %>
                          Return has been approved. Process refund to complete the return.
                        <% } %>
                      </p>
                      
                      <% const returnReasons = order.orderedItem.filter(item => item.returnReason).map(item => item.returnReason); %>
                      <% if (returnReasons.length > 0) { %>
                      <div class="mt-2">
                        <p class="text-xs font-medium <%= order.orderStatus === 'Return Requested' ? 'text-yellow-800' : 
                                                             'text-blue-800' %>">
                          Return Reason: <%= returnReasons[0] %>
                        </p>
                      </div>
                      <% } %>
                    </div>
                    
                    <div class="flex gap-2">
                      <% if (order.orderStatus === 'Return Requested') { %>
                        <button onclick="approveReturn('<%= order._id %>')" 
                                class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition text-sm font-medium">
                          <i class="fas fa-check mr-1"></i> Approve Return
                        </button>
                        <button onclick="rejectReturn('<%= order._id %>')" 
                                class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition text-sm font-medium">
                          <i class="fas fa-times mr-1"></i> Reject Return
                        </button>
                      <% } else if (order.orderStatus === 'Return Approved') { %>
                        <button onclick="processRefund('<%= order._id %>')" 
                                class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition text-sm font-medium">
                          <i class="fas fa-money-check-alt mr-1"></i> Process Refund
                        </button>
                      <% } %>
                    </div>
                  </div>
                  
                  <% if (order.orderStatus === 'Return Approved') { %>
                  <div class="mt-3 pt-3 border-t border-blue-200">
                    <p class="text-sm text-blue-800">
                      <span class="font-medium">Refund Amount:</span> 
                      ‚Çπ<%= Number(order.finalAmount || 0).toFixed(2) %>
                    </p>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
            <% } %>
            
            <% if (order.orderStatus === 'Cancelled' || order.orderStatus === 'Returned') { %>
            <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded">
              <div class="flex items-start">
                <i class="fas fa-ban text-red-500 mt-1 mr-2"></i>
                <div>
                  <p class="text-sm text-red-700 font-medium">
                    This order has been <%= order.orderStatus.toLowerCase() %>.
                  </p>
                  <p class="text-xs text-red-600 mt-1">
                    No further status updates are allowed for <%= order.orderStatus.toLowerCase() %> orders.
                  </p>
                </div>
              </div>
            </div>
            <% } %>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
            <div class="bg-white rounded-lg shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">
                Customer Information
              </h2>
              <div class="space-y-2 text-sm text-gray-600">
                <% if (order.userId) { %>
                  <p class="font-medium text-gray-800"><%= order.userId.name %></p>
                  <p>
                    <span class="text-gray-500">Email:</span> 
                    <a href="mailto:<%= order.userId.email %>" class="text-blue-600 hover:underline">
                      <%= order.userId.email %>
                    </a>
                  </p>
                  <% if (order.userId.phone) { %>
                  <p>
                    <span class="text-gray-500">Phone:</span> 
                    <a href="tel:<%= order.userId.phone %>" class="text-blue-600 hover:underline">
                      <%= order.userId.phone %>
                    </a>
                  </p>
                  <% } %>
                <% } else { %>
                  <p class="text-gray-500">Customer information not available</p>
                <% } %>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">
                Order Details
              </h2>
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Order ID:</span>
                  <span class="font-medium text-gray-800"><%= order.orderId %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Total Amount:</span>
                  <span class="font-semibold text-gray-800">‚Çπ<%= Number(order.finalAmount || order.totalPrice || 0).toFixed(2) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Payment Method:</span>
                  <span class="font-medium text-gray-800"><%= order.payment %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Payment Status:</span>
                  <span class="font-medium text-gray-800"><%= order.paymentStatus %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Order Date:</span>
                  <span class="font-medium text-gray-800">
                    <%= new Date(order.createdAt).toLocaleDateString('en-GB') %>
                  </span>
                </div>
                <% if (order.deliveredDate) { %>
                <div class="flex justify-between">
                  <span class="text-gray-600">Delivered Date:</span>
                  <span class="font-medium text-gray-800">
                    <%= new Date(order.deliveredDate).toLocaleDateString('en-GB') %>
                  </span>
                </div>
                <% } %>
                <% if (order.returnApprovalDate) { %>
                <div class="flex justify-between">
                  <span class="text-gray-600">Return Approved:</span>
                  <span class="font-medium text-gray-800">
                    <%= new Date(order.returnApprovalDate).toLocaleDateString('en-GB') %>
                  </span>
                </div>
                <% } %>
                <% if (order.refundDate) { %>
                <div class="flex justify-between">
                  <span class="text-gray-600">Refund Date:</span>
                  <span class="font-medium text-gray-800">
                    <%= new Date(order.refundDate).toLocaleDateString('en-GB') %>
                  </span>
                </div>
                <% } %>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6">
              <h2 class="text-lg font-semibold text-gray-800 mb-4">
                Order Summary
              </h2>
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Subtotal:</span>
                  <span class="text-gray-800">‚Çπ<%= Number(order.totalPrice || 0).toFixed(2) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Discount:</span>
                  <span class="text-green-600">-‚Çπ<%= Number(order.discount || 0).toFixed(2) %></span>
                </div>
                <div class="flex justify-between pt-3 border-t">
                  <span class="font-semibold text-gray-800">Total:</span>
                  <span class="font-bold text-gray-900">‚Çπ<%= Number(order.finalAmount || order.totalPrice || 0).toFixed(2) %></span>
                </div>
                <% if (order.couponId) { %>
                <div class="pt-2 border-t">
                  <p class="text-sm text-gray-600">
                    <span class="font-medium">Coupon Applied:</span> <%= order.couponId.code %>
                  </p>
                </div>
                <% } %>
              </div>
            </div>
          </div>

          <% if ((order.shippingAddress && order.shippingAddress.length > 0) || order.address) { %>
          <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">
              Shipping Address
            </h2>
            <% if (order.shippingAddress && order.shippingAddress.length > 0) { %>
              <% const address = order.shippingAddress[0]; %>
              <div class="space-y-2 text-sm text-gray-600">
                <p><%= address.flatNumber %>, <%= address.streetName %></p>
                <p><%= address.city %>, <%= address.state %></p>
                <p><%= address.country %> - <%= address.pincode %></p>
                <p class="pt-2">
                  <span class="text-gray-500">Phone:</span> 
                  <a href="tel:<%= address.phone %>" class="text-blue-600 hover:underline">
                    <%= address.phone %>
                  </a>
                </p>
              </div>
            <% } else if (order.address) { %>
              <div class="space-y-2 text-sm text-gray-600">
                <p class="font-medium text-gray-800"><%= order.address.name %></p>
                <p><%= order.address.houseName %></p>
                <p><%= order.address.locality %>, <%= order.address.city %></p>
                <p><%= order.address.state %> - <%= order.address.pincode %></p>
                <p class="pt-2">
                  <span class="text-gray-500">Email:</span> 
                  <a href="mailto:<%= order.address.email %>" class="text-blue-600 hover:underline">
                    <%= order.address.email %>
                  </a>
                </p>
                <p>
                  <span class="text-gray-500">Phone:</span> 
                  <a href="tel:<%= order.address.phone %>" class="text-blue-600 hover:underline">
                    <%= order.address.phone %>
                  </a>
                </p>
              </div>
            <% } %>
          </div>
          <% } %>

          <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50 border-b">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                      Product
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Image
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Quantity
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Unit Price
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Status
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Return Reason
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">
                      Total
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% if (order.orderedItem && order.orderedItem.length > 0) { %>
                    <% order.orderedItem.forEach((item, index) => { %>
                    <tr data-item-id="<%= item._id || index %>">
                      <td class="px-6 py-4 text-sm text-gray-800">
                        <%= item.productId?.name || 'Product' %>
                        <% if (item.ml) { %>
                          <span class="text-xs text-gray-500 block">Size: <%= item.ml %>ml</span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-center">
                        <% if (item.productId?.images && item.productId.images.length > 0) { %>
                          <img
                            src="<%= item.productId.images[0] %>"
                            alt="<%= item.productId.name %>"
                            class="w-12 h-12 object-cover rounded mx-auto"
                          />
                        <% } else { %>
                          <div class="w-12 h-12 bg-gray-200 rounded mx-auto flex items-center justify-center">
                            <i class="fas fa-image text-gray-400"></i>
                          </div>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-center text-sm text-gray-600">
                        <%= item.quantity %>
                      </td>
                      <td class="px-6 py-4 text-center text-sm text-gray-800">
                        ‚Çπ<%= Number(item.price || 0).toFixed(2) %>
                      </td>
                      <td class="px-6 py-4 text-center">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                          <%= item.status === 'Delivered' ? 'bg-green-100 text-green-800' : 
                             item.status === 'Shipped' ? 'bg-blue-100 text-blue-800' : 
                             item.status === 'Processing' ? 'bg-indigo-100 text-indigo-800' : 
                             item.status === 'Cancelled' ? 'bg-red-100 text-red-800' : 
                             item.status === 'Returned' ? 'bg-purple-100 text-purple-800' : 
                             item.status === 'Return Requested' ? 'bg-yellow-100 text-yellow-800' : 
                             item.status === 'Return Approved' ? 'bg-blue-100 text-blue-800' : 
                             'bg-yellow-100 text-yellow-800' %>">
                          <%= item.status || order.orderStatus %>
                          <% if (item.status === 'Delivered' && item.deliveredDate) { %>
                            <i class="fas fa-check ml-1"></i>
                          <% } %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-center text-sm">
                        <% if (item.returnReason) { %>
                          <span class="text-xs text-gray-700 px-2 py-1 bg-gray-100 rounded">
                            <%= item.returnReason %>
                          </span>
                        <% } else { %>
                          <span class="text-xs text-gray-400">-</span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-center text-sm font-semibold text-gray-800">
                        ‚Çπ<%= Number((item.price || 0) * (item.quantity || 1)).toFixed(2) %>
                      </td>
                    </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                        No items found in this order
                      </td>
                    </tr>
                  <% } %>
                </tbody>
                <tfoot class="bg-gray-50">
                  <tr>
                    <td colspan="6" class="px-6 py-4 text-right text-sm font-semibold text-gray-700">
                      Subtotal:
                    </td>
                    <td class="px-6 py-4 text-center text-sm font-bold text-gray-900">
                      ‚Çπ<%= Number(order.totalPrice || 0).toFixed(2) %>
                    </td>
                  </tr>
                  <% if (order.discount && order.discount > 0) { %>
                  <tr>
                    <td colspan="6" class="px-6 py-4 text-right text-sm font-semibold text-gray-700">
                      Discount:
                    </td>
                    <td class="px-6 py-4 text-center text-sm font-bold text-green-600">
                      -‚Çπ<%= Number(order.discount || 0).toFixed(2) %>
                    </td>
                  </tr>
                  <% } %>
                  <tr>
                    <td colspan="6" class="px-6 py-4 text-right text-sm font-semibold text-gray-700">
                      Total Amount:
                    </td>
                    <td class="px-6 py-4 text-center text-sm font-bold text-gray-900">
                      ‚Çπ<%= Number(order.finalAmount || order.totalPrice || 0).toFixed(2) %>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>

<script>
  const statusFlow = ['Pending', 'Processing', 'Shipped', 'Delivered'];
  const cancelStatus = 'Cancelled';
  const returnStatus = 'Returned';
  
  function getNextValidStatuses(currentStatus) {
    if (currentStatus === cancelStatus || currentStatus === returnStatus || 
        currentStatus === 'Return Requested' || currentStatus === 'Return Approved') {
      return [];
    }
    
    if (currentStatus === 'Delivered') {
      return [];
    }
    
    const currentIndex = statusFlow.indexOf(currentStatus);
    
    const nextStatuses = [];
    
    if (currentIndex + 1 < statusFlow.length) {
      nextStatuses.push(statusFlow[currentIndex + 1]);
    }
    
    if (currentStatus !== 'Delivered') {
      nextStatuses.push(cancelStatus);
    }
    
    return nextStatuses;
  }
  
  function populateOrderStatusSelect() {
    const orderStatusSelect = document.getElementById('orderStatusSelect');
    if (!orderStatusSelect) return;
    
    const currentStatus = orderStatusSelect.dataset.currentStatus;
    const validStatuses = getNextValidStatuses(currentStatus);
    

    orderStatusSelect.innerHTML = '';
    
    const currentOption = document.createElement('option');
    currentOption.value = currentStatus;
    currentOption.textContent = `${currentStatus} (Current)`;
    currentOption.disabled = true;
    currentOption.selected = true;
    orderStatusSelect.appendChild(currentOption);
    
    validStatuses.forEach(status => {
      const option = document.createElement('option');
      option.value = status;
      
      if (status === 'Processing') option.textContent = 'Processing üîÑ';
      else if (status === 'Shipped') option.textContent = 'Shipped üöö';
      else if (status === 'Delivered') option.textContent = 'Delivered ‚úÖ';
      else if (status === 'Cancelled') option.textContent = 'Cancelled ‚ùå';
      else option.textContent = status;
      
      orderStatusSelect.appendChild(option);
    });
    
    if (validStatuses.length === 0) {
      orderStatusSelect.disabled = true;
      orderStatusSelect.title = 'No further status updates available';
    }
  }
  
  document.addEventListener('DOMContentLoaded', function() {
    populateOrderStatusSelect();
    
    const orderStatus = '<%= order.orderStatus %>';
    if (orderStatus === 'Cancelled' || orderStatus === 'Returned' || 
        orderStatus === 'Delivered' || orderStatus === 'Return Requested' || 
        orderStatus === 'Return Approved') {
      const select = document.getElementById('orderStatusSelect');
      if (select) {
        select.disabled = true;
        select.title = `Order is ${orderStatus.toLowerCase()} - no updates allowed`;
      }
    }
  });
  
  const orderStatusSelect = document.getElementById('orderStatusSelect');
  const orderStatusBadge = document.getElementById('orderStatusBadge');
  
  if (orderStatusSelect) {
    orderStatusSelect.addEventListener('change', async (e) => {
      const orderId = e.target.dataset.orderId;
      const newStatus = e.target.value;
      const currentStatus = e.target.dataset.currentStatus;
      
      if (newStatus === currentStatus) {
        e.target.value = currentStatus;
        return;
      }
      
      const isCancelling = newStatus === 'Cancelled';
      const result = await Swal.fire({
        title: isCancelling ? 'Cancel Order?' : 'Update Order Status?',
        html: isCancelling 
          ? `<strong class="text-red-600">Warning: This action cannot be undone!</strong><br><br>
             Are you sure you want to cancel this order?`
          : `Change order status from <strong>${currentStatus}</strong> to <strong>${newStatus}</strong>?`,
        icon: isCancelling ? 'warning' : 'question',
        showCancelButton: true,
        confirmButtonColor: isCancelling ? '#d33' : '#3085d6',
        cancelButtonColor: '#6b7280',
        confirmButtonText: isCancelling ? 'Yes, cancel order!' : 'Yes, update it!',
        cancelButtonText: 'Cancel'
      });

      if (!result.isConfirmed) {
        e.target.value = currentStatus;
        return;
      }

      try {
        const res = await axios.put(`/admin/adminOrders/${orderId}/status`, {
          status: newStatus
        });

        if (res.data.success) {
          Swal.fire({
            icon: isCancelling ? 'warning' : 'success',
            title: isCancelling ? 'Order Cancelled!' : 'Updated!',
            text: isCancelling ? 'Order has been cancelled successfully' : 'Order status updated successfully',
            timer: 1500,
            showConfirmButton: false
          });

          orderStatusBadge.textContent = newStatus;
          
          orderStatusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium';
          if (newStatus === 'Delivered') {
            orderStatusBadge.classList.add('bg-green-100', 'text-green-800');
          } else if (newStatus === 'Shipped') {
            orderStatusBadge.classList.add('bg-blue-100', 'text-blue-800');
          } else if (newStatus === 'Processing') {
            orderStatusBadge.classList.add('bg-indigo-100', 'text-indigo-800');
          } else if (newStatus === 'Cancelled') {
            orderStatusBadge.classList.add('bg-red-100', 'text-red-800');
          } else if (newStatus === 'Returned') {
            orderStatusBadge.classList.add('bg-purple-100', 'text-purple-800');
          } else {
            orderStatusBadge.classList.add('bg-yellow-100', 'text-yellow-800');
          }

          e.target.dataset.currentStatus = newStatus;
          
          populateOrderStatusSelect();
          
          if (newStatus === 'Cancelled' || newStatus === 'Returned' || newStatus === 'Delivered') {
            document.querySelectorAll('.item-status-select').forEach(select => {
              select.disabled = true;
              select.title = `Order is ${newStatus.toLowerCase()} - no updates allowed`;
            });
            
            if (newStatus === 'Cancelled') {
              document.querySelector('.p-6').classList.add('cancelled-order');
            }
            
            setTimeout(() => {
              window.location.reload();
            }, 2000);
          }
        }
      } catch (err) {
        Swal.fire({
          icon: 'error',
          title: 'Update Failed!',
          text: err.response?.data?.message || 'Failed to update order status'
        });

        e.target.value = currentStatus;
      }
    });
  }

  async function approveReturn(orderId) {
