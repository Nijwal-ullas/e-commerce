<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfume Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }
        .submenu.open {
            max-height: 200px;
        }
        .chart-container {
            height: 320px;
            display: flex;
            align-items: flex-end;
            justify-content: space-around;
            padding: 20px 10px;
            position: relative;
        }
        .chart-bar {
            width: 60px;
            border-radius: 0.375rem 0.375rem 0 0;
            transition: all 0.3s ease;
            position: relative;
            cursor: pointer;
        }
        .chart-bar:hover {
            opacity: 0.85;
            transform: translateY(-3px);
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">

    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg">
            <div class="p-4 border-b">
                <div class="text-gray-600 text-sm">Admin Panel</div>
            </div>
            <nav class="p-4 space-y-1">
                <a href="#" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>

                <button onclick="toggleDropdown('categorySub', 'chevCat')" class="w-full flex items-center gap-3 px-4 py-2 rounded hover:bg-gray-100 text-gray-700 font-medium">
                    <i class="fas fa-tags"></i>
                    <span>Category</span>
                    <i id="chevCat" class="fas fa-chevron-down ml-auto text-xs transition-transform duration-300"></i>
                </button>

                <div id="categorySub" class="submenu ml-8 mt-1 space-y-1 open">
                    <a href="#" id="categoryListLink" class="block px-4 py-2 text-indigo-600 font-medium text-sm bg-gray-100 rounded">Category List</a>
                    <a href="#" id="addCategoryLink" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded text-sm">Add Category</a>
                </div>

                <a href="#" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-cube"></i>
                    <span>Brands</span>
                </a>

                <button onclick="toggleDropdown('productSub', 'chevProd')" class="w-full flex items-center gap-3 px-4 py-2 rounded hover:bg-gray-100 text-gray-700 font-medium">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                    <i id="chevProd" class="fas fa-chevron-down ml-auto text-xs transition-transform duration-300"></i>
                </button>

                <div id="productSub" class="submenu ml-8 mt-1 space-y-1">
                    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded text-sm">Product List</a>
                    <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded text-sm">Product Upload</a>
                </div>

                <a href="#" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-users"></i>
                    <span>Customers</span>
                </a>

                <a href="#" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Orders</span>
                </a>

                <a href="#" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Coupons</span>
                </a>

                <a href="/admin/logout" class="flex items-center gap-3 px-4 py-2 text-gray-700 hover:bg-gray-100 rounded">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-white shadow-sm px-6 py-4 flex items-center justify-between">
                <h1 class="text-lg font-semibold text-gray-800">Perfume Dashboard</h1>
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <i class="fas fa-bell text-gray-600"></i>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">3</span>
                    </div>
                    <div class="w-8 h-8 bg-blue-500 rounded-full"></div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="p-6">

                <!-- Welcome Section -->
                <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl p-8 text-white mb-6 flex justify-between items-center">
                    <div>
                        <h1 class="text-2xl font-bold mb-2">Welcome, <%= adminName || 'Admin' %></h1>
                        <p class="text-sm opacity-90 mb-4">Here's what's happening in your store today. See the statistics at once.</p>
                        <button class="bg-white text-indigo-500 font-semibold py-2 px-6 rounded-lg hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300">
                            <i class="fas fa-chart-line mr-2"></i>View Report
                        </button>
                    </div>
                    <div>
                        <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="w-40 h-auto">
                            <circle cx="100" cy="100" r="80" fill="rgba(255,255,255,0.2)"/>
                            <path d="M100,40 L100,120 M70,100 L130,100" stroke="white" stroke-width="8" stroke-linecap="round"/>
                            <circle cx="100" cy="100" r="15" fill="white"/>
                        </svg>
                    </div>
                </div>

                <!-- Simple Stats Section -->
                <div class="grid grid-cols-3 gap-6 mb-6">
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h2 class="text-gray-600 text-sm">Total Sales</h2>
                        <p class="text-2xl font-semibold text-indigo-600 mt-2">$12,450</p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h2 class="text-gray-600 text-sm">Total Orders</h2>
                        <p class="text-2xl font-semibold text-purple-600 mt-2">320</p>
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow">
                        <h2 class="text-gray-600 text-sm">Customers</h2>
                        <p class="text-2xl font-semibold text-pink-600 mt-2">150</p>
                    </div>
                </div>

                <!-- Chart Section -->
                <div class="bg-white rounded-lg shadow p-6">
                    <h2 class="text-lg font-semibold text-gray-800 mb-4">Sales Overview</h2>
                    <div class="chart-container">
                        <div class="chart-bar bg-indigo-500" style="height: 70%"></div>
                        <div class="chart-bar bg-purple-500" style="height: 90%"></div>
                        <div class="chart-bar bg-pink-500" style="height: 60%"></div>
                        <div class="chart-bar bg-blue-400" style="height: 80%"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        // Sidebar Dropdowns
        function toggleDropdown(subId, chevronId){
            const sub = document.getElementById(subId);
            const chevron = document.getElementById(chevronId);
            sub.classList.toggle("open");
            chevron.classList.toggle("rotate-180");
        }
    </script>
</body>
</html>
