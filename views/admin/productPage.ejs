<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products - Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
    <style>
      .fade-in {
        animation: fadeIn 0.3s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .slide-down {
        animation: slideDown 0.3s ease-out;
      }
      @keyframes slideDown {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
      }
      .image-preview {
        transition: all 0.3s ease;
      }
      .image-preview:hover {
        transform: scale(1.05);
      }
      .carousel-image {
        display: none;
      }
      .carousel-image.active {
        display: block;
      }
      .variant-item {
        transition: all 0.3s ease;
      }
      .variant-item:hover {
        background-color: #f9fafb;
      }
    </style>
  </head>
  <body class="bg-gray-100 flex">
    <%- include('../partials/admin/sidebar') %>

    <div class="flex-1 flex flex-col min-h-screen">
      <%- include('../partials/admin/header') %>

      <main class="flex-1 overflow-auto p-6">
        <div class="w-full px-2 py-2">

          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Products</h1>
            <button
              id="openModalBtn"
              class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition font-medium flex items-center"
            >
              <i class="fas fa-plus mr-2"></i> ADD PRODUCT
            </button>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
            <div class="flex flex-col md:flex-row gap-4 items-end">
              <div class="flex-1">
                <form id="searchForm" class="flex gap-2" action="/admin/product" method="GET">
                  <div class="relative flex-1">
                    <input
                      type="text"
                      id="searchInput"
                      name="search"
                      value="<%= search || '' %>"
                      placeholder="Search products..."
                      class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white transition"
                    />
                    <i class="fas fa-search absolute left-3 top-3.5 text-gray-400"></i>
                  </div>
                  
                  <button
                    type="submit"
                    id="searchBtn"
                    class="bg-blue-600 text-white px-6 py-2.5 rounded-lg hover:bg-blue-700 transition font-medium flex items-center"
                  >
                    <i class="fas fa-search mr-2"></i> Search
                  </button>

                  <% if (search) { %>
                    <button
                      type="button"
                      id="clearSearchBtn"
                      class="bg-gray-600 text-white px-6 py-2.5 rounded-lg hover:bg-gray-700 transition font-medium flex items-center"
                    >
                      <i class="fas fa-times mr-2"></i> Clear
                    </button>
                  <% } %>
                </form>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="overflow-x-auto">
              <table class="w-full min-w-max">
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PRODUCT</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CATEGORY</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PRICE</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">STOCK</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">DISCOUNT</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ACTIONS</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% if (productData && productData.length > 0) { %>
                    <% productData.forEach(product => { %>
                      <tr class="hover:bg-gray-50 transition" data-product='<%- JSON.stringify(product) %>'>
                        <td class="px-6 py-4">
                          <div class="text-sm font-medium text-gray-900"><%= product.productName %></div>
                          <div class="text-xs text-gray-500 truncate max-w-xs"><%= product.description %></div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                          <%= product.category ? product.category.name : 'No Category' %>
                        </td>
                        <td class="px-6 py-4 text-sm">
                          <% if (product.oldPrice && product.oldPrice > product.price) { %>
                            <div class="flex flex-col">
                              <span class="text-blue-600 font-semibold">₹<%= product.price.toFixed(2) %></span>
                              <span class="text-gray-400 text-xs line-through">₹<%= product.oldPrice.toFixed(2) %></span>
                            </div>
                          <% } else { %>
                            <span class="text-blue-600 font-semibold">₹<%= product.price.toFixed(2) %></span>
                          <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                          <% if (product.VariantItem && product.VariantItem.length > 0) { %>
                            <div class="space-y-1">
                              <% product.VariantItem.forEach(variant => { %>
                                <div class="text-xs bg-gray-100 px-2 py-1 rounded">
                                  <%= variant.Ml %>ml - Qty: <%= variant.Quantity %>
                                </div>
                              <% }) %>
                            </div>
                          <% } else { %>
                            <span class="text-gray-400 text-xs">No variants</span>
                          <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm <%= product.discount > 0 ? 'text-green-600 font-medium' : 'text-gray-500' %>">
                          <%= product.discount > 0 ? product.discount + '%' : 'None' %>
                        </td>
                        <td class="px-6 py-4 text-sm">
                          <div class="flex space-x-3">
                            <button onclick="viewProduct('<%= product._id %>')" 
                                    class="text-green-600 hover:text-green-900 transition" 
                                    title="View Product">
                              <i class="fas fa-eye"></i>
                            </button>
                            
                            <button class="edit-btn text-blue-600 hover:text-blue-900 transition" 
                                    title="Edit Product">
                              <i class="fas fa-edit"></i>
                            </button>
                            
                            <button class="delete-btn text-red-600 hover:text-red-900 transition" 
                                    title="Delete Product">
                              <i class="fas fa-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                        <div class="flex flex-col items-center">
                          <i class="fas fa-box-open text-4xl text-gray-300 mb-2"></i>
                          <p class="text-lg font-medium">No products found</p>
                          <% if (search) { %>
                            <p class="text-sm text-gray-500 mt-1">Try a different search term</p>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>

            <% if (totalPages > 1) { %>
              <div class="flex items-center justify-between px-6 py-4 border-t bg-white">
                <span class="text-sm text-gray-700">
                  Page <%= currentPage %> of <%= totalPages %> — Total: <%= totalProducts %> products
                </span>
                <div class="flex space-x-2">
                  <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %><% if (search) { %>&search=<%= search %><% } %>"
                       class="w-8 h-8 flex items-center justify-center border rounded hover:bg-gray-100 transition">
                       <i class="fas fa-chevron-left text-gray-600"></i>
                    </a>
                  <% } else { %>
                    <span class="w-8 h-8 flex items-center justify-center border rounded opacity-50 cursor-not-allowed">
                      <i class="fas fa-chevron-left text-gray-400"></i>
                    </span>
                  <% } %>

                  <% for(let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                      <span class="w-8 h-8 flex items-center justify-center rounded text-sm font-medium bg-blue-500 text-white">
                        <%= i %>
                      </span>
                    <% } else { %>
                      <a href="?page=<%= i %><% if (search) { %>&search=<%= search %><% } %>"
                         class="w-8 h-8 flex items-center justify-center rounded text-sm font-medium text-gray-700 border hover:bg-gray-100 transition">
                        <%= i %>
                      </a>
                    <% } %>
                  <% } %>

                  <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %><% if (search) { %>&search=<%= search %><% } %>"
                       class="w-8 h-8 flex items-center justify-center border rounded hover:bg-gray-100 transition">
                       <i class="fas fa-chevron-right text-gray-600"></i>
                    </a>
                  <% } else { %>
                    <span class="w-8 h-8 flex items-center justify-center border rounded opacity-50 cursor-not-allowed">
                      <i class="fas fa-chevron-right text-gray-400"></i>
                    </span>
                  <% } %>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>

    <div id="productModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto slide-down">
        <div class="flex justify-between items-center p-6 border-b border-gray-200 sticky top-0 bg-white z-10">
          <h2 id="modalTitle" class="text-xl font-bold text-gray-800">Add Product</h2>
          <button id="closeModalBtn" class="text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>
        <div class="p-6">
          <form id="productForm" enctype="multipart/form-data">
            <input type="hidden" id="productId" value="">
            
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">Product Name</label>
              <input type="text" id="productName" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
              <p id="nameError" class="text-red-500 text-xs mt-1 hidden">Product name is required</p>
            </div>
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
              <textarea id="productDescription" rows="3" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" ></textarea>
              <p id="descriptionError" class="text-red-500 text-xs mt-1 hidden">Description is required</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                <select id="productCategory" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                  <% categories.forEach(c => { %>
                    <option value="<%= c._id %>"><%= c.name %></option>
                  <% }) %>
                </select>
                <p id="categoryError" class="text-red-500 text-xs mt-1 hidden">Category is required</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Price</label>
                <input type="number" id="productPrice" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" min="0" step="0.01" />
                <p id="priceError" class="text-red-500 text-xs mt-1 hidden">Price must be a positive number</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Old Price</label>
                <input type="number" id="productOldPrice" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" min="0" step="0.01" />
                <p id="oldPriceError" class="text-red-500 text-xs mt-1 hidden">Old price must be greater than current price</p>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Brand</label>
                <select id="productBrand" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                  <option value="">No Brand</option>
                  <% brands.forEach(b => { %>
                    <option value="<%= b._id %>"><%= b.name %></option>
                  <% }) %>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Discount (%)</label>
                <input type="number" id="productDiscount" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" min="0" max="100" />
                <p id="discountError" class="text-red-500 text-xs mt-1 hidden">Discount must be between 0 and 100</p>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="productIsListed" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                <label for="productIsListed" class="ml-2 text-sm font-medium text-gray-700">Listed</label>
              </div>
            </div>

            <div class="mb-6">
              <div class="flex justify-between items-center mb-4">
                <label class="block text-sm font-medium text-gray-700">Stock (ML Variants)</label>
                <button type="button" id="addVariantBtn" class="bg-green-500 text-white px-3 py-1.5 rounded text-sm hover:bg-green-600 transition flex items-center">
                  <i class="fas fa-plus mr-1"></i> Add Variant
                </button>
              </div>
              <div id="variantsContainer" class="space-y-3">
              </div>
              <p id="variantError" class="text-red-500 text-xs mt-1 hidden">At least one ML variant is required</p>
            </div>

            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 mb-2">Product Images (Min 3, Max 5)</label>
              <div id="imageUploadArea" class="relative flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 cursor-pointer transition-colors bg-gray-50">
                <i class="fas fa-cloud-upload-alt text-gray-400 text-4xl mb-2"></i>
                <p class="text-sm text-gray-600 font-medium" id="uploadText">Click or drag images here (min 3)</p>
                <p class="text-xs text-gray-500 mt-1">Supported formats: JPG, PNG, WebP - Images will be cropped to square</p>
                <input type="file" name="images" id="productImages" multiple accept="image/*" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10" />
              </div>
              <div id="imageError" class="text-red-500 text-xs mt-1 hidden">Please add at least three images</div>
              <div id="selectedImagesPreview" class="mt-4 flex flex-wrap gap-3"></div>
              <div id="existingImagesPreview" class="mt-4 flex flex-wrap gap-3"></div>
            </div>

            <div class="flex justify-end space-x-4">
              <button type="button" id="cancelBtn" class="bg-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-400 transition font-medium">Cancel</button>
              <button type="submit" id="submitBtn" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition font-medium flex items-center">
                <i class="fas fa-plus-circle mr-2"></i> Publish Product
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div id="cropModal" class="fixed inset-0 bg-black bg-opacity-50 z-[60] hidden flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full">
        <div class="flex justify-between items-center p-6 border-b border-gray-200">
          <h2 class="text-xl font-bold text-gray-800">Crop Image</h2>
          <button id="closeCropModalBtn" class="text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>
        <div class="p-6">
          <div class="mb-4">
            <div id="cropContainer" class="max-h-96 overflow-hidden bg-gray-100 rounded-lg">
              <img id="cropImage" src="" alt="Image to crop" class="max-w-full">
            </div>
          </div>
          <div class="flex justify-end space-x-4">
            <button type="button" id="cancelCropBtn" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition font-medium">Cancel</button>
            <button type="button" id="confirmCropBtn" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition font-medium">Apply Crop</button>
          </div>
        </div>
      </div>
    </div>

    <div id="viewProductModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
        <div class="flex justify-between items-center p-6 border-b border-gray-200 sticky top-0 bg-white z-10">
          <h2 class="text-xl font-bold text-gray-800">Product Details</h2>
          <button id="closeViewModalBtn" class="text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>
        <div class="p-6">
          <div id="viewProductContent">
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <script>
      let editingId = null;
      let selectedFiles = [];
      let existingImages = [];
      let currentCropper = null;
      let currentCropFile = null;
      let currentCropModalOnComplete = null;
      let variantCounter = 0;
      const predefinedMlOptions = [30, 50, 75, 100, 200];
      const MAX_VARIANTS = 4;

      document.addEventListener("DOMContentLoaded", () => {
        const searchForm = document.getElementById("searchForm");
        const searchInput = document.getElementById("searchInput");
        const searchBtn = document.getElementById("searchBtn");
        const clearSearchBtn = document.getElementById("clearSearchBtn");

        const urlParams = new URLSearchParams(window.location.search);
        const hasSearch = urlParams.has("search") && urlParams.get("search").trim() !== "";

        function toggleClearButton(show) {
          if (clearSearchBtn) {
            clearSearchBtn.classList.toggle("hidden", !show);
          }
        }

        toggleClearButton(hasSearch);

        searchInput.addEventListener("input", () => {
          const hasValue = searchInput.value.trim() !== "";
          toggleClearButton(hasValue);
        });

        searchForm.addEventListener("submit", (e) => {
          e.preventDefault();
          const searchTerm = searchInput.value.trim();
          
          const newParams = new URLSearchParams();
          if (searchTerm) newParams.set("search", searchTerm);
          
          if (urlParams.has("page")) {
            newParams.set("page", urlParams.get("page"));
          } else {
            newParams.set("page", "1");
          }
          
          window.location.href = `/admin/product?${newParams.toString()}`;
        });

        if (clearSearchBtn) {
          clearSearchBtn.addEventListener("click", () => {
            searchInput.value = "";
            
            const newParams = new URLSearchParams();
            if (urlParams.has("page")) {
              newParams.set("page", urlParams.get("page"));
            } else {
              newParams.set("page", "1");
            }
            
            window.location.href = `/admin/product?${newParams.toString()}`;
          });
        }

        searchInput.addEventListener("keypress", (e) => {
          if (e.key === "Enter") {
            searchForm.dispatchEvent(new Event("submit"));
          }
        });

        const form = document.getElementById("productForm");
        const modal = document.getElementById("productModal");
        const cropModal = document.getElementById("cropModal");
        const viewModal = document.getElementById("viewProductModal");
        const openBtn = document.getElementById("openModalBtn");
        const closeBtn = document.getElementById("closeModalBtn");
        const closeCropBtn = document.getElementById("closeCropModalBtn");
        const closeViewBtn = document.getElementById("closeViewModalBtn");
        const cancelBtn = document.getElementById("cancelBtn");
        const cancelCropBtn = document.getElementById("cancelCropBtn");
        const confirmCropBtn = document.getElementById("confirmCropBtn");
        const fileInput = document.getElementById("productImages");
        const uploadArea = document.getElementById("imageUploadArea");
        const preview = document.getElementById("selectedImagesPreview");
        const existingPreview = document.getElementById("existingImagesPreview");
        const modalTitle = document.getElementById("modalTitle");
        const submitBtn = document.getElementById("submitBtn");
        const table = document.querySelector("table");
        const uploadText = document.getElementById("uploadText");
        const cropImage = document.getElementById("cropImage");
        const cropContainer = document.getElementById("cropContainer");
        const addVariantBtn = document.getElementById("addVariantBtn");
        const variantsContainer = document.getElementById("variantsContainer");

        function getAvailableMlOptions(usedMl = []) {
          return predefinedMlOptions.filter(ml => !usedMl.includes(ml));
        }

        function addVariantItem(ml = '', quantity = '') {
          const currentVariantCount = variantsContainer.querySelectorAll('.variant-item').length;
          
          if (currentVariantCount >= MAX_VARIANTS) {
            Swal.fire({
              icon: 'warning',
              title: 'Limit Reached',
              text: `Maximum ${MAX_VARIANTS} variants allowed`,
              confirmButtonColor: '#3085d6',
            });
            return;
          }
          
          const variantId = `variant-${variantCounter++}`;
          const usedMl = Array.from(variantsContainer.querySelectorAll('.variant-ml'))
            .map(select => select.value)
            .filter(value => value !== '' && value !== ml);
          
          const availableOptions = getAvailableMlOptions(usedMl);
          
          const variantHTML = `
            <div class="variant-item bg-gray-50 p-4 rounded-lg border border-gray-200" data-id="${variantId}">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">ML</label>
                  <select class="variant-ml w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                    <option value="">Select ML</option>
                    ${availableOptions.map(mlOption => `
                      <option value="${mlOption}" ${mlOption == ml ? 'selected' : ''}>${mlOption}ml</option>
                    `).join('')}
                    ${ml && !availableOptions.includes(Number(ml)) ? `<option value="${ml}" selected>${ml}ml</option>` : ''}
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Quantity</label>
                  <input type="number" 
                         class="variant-quantity w-full px-3 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" 
                         placeholder="Quantity" 
                         min="0" 
                         step="1"
                         value="${quantity}">
                </div>
                <div class="flex justify-end">
                  <button type="button" 
                          class="remove-variant bg-red-500 text-white px-3 py-2 rounded text-sm hover:bg-red-600 transition flex items-center"
                          onclick="removeVariant('${variantId}')">
                    <i class="fas fa-trash mr-1"></i> Remove
                  </button>
                </div>
              </div>
            </div>
          `;
          variantsContainer.insertAdjacentHTML('beforeend', variantHTML);

          const mlSelect = variantsContainer.querySelector(`[data-id="${variantId}"] .variant-ml`);
          mlSelect.addEventListener('change', updateVariantDropdowns);
          
          updateAddVariantButtonState();
        }

        function updateVariantDropdowns() {
          const allMlSelects = variantsContainer.querySelectorAll('.variant-ml');
          const usedMlValues = Array.from(allMlSelects)
            .map(select => select.value)
            .filter(value => value !== '');

          allMlSelects.forEach(select => {
            const currentValue = select.value;
            const options = Array.from(select.options);
            
            options.forEach(option => {
              if (option.value === '' || option.value === currentValue) {
                option.style.display = '';
              } else {
                option.style.display = usedMlValues.includes(option.value) ? 'none' : '';
              }
            });
          });
        }

        function removeVariant(variantId) {
          const variantElement = document.querySelector(`[data-id="${variantId}"]`);
          if (variantElement) {
            variantElement.remove();
            updateVariantDropdowns();
            updateAddVariantButtonState();
          }
        }

        function updateAddVariantButtonState() {
          const currentVariantCount = variantsContainer.querySelectorAll('.variant-item').length;
          const addVariantBtn = document.getElementById('addVariantBtn');
          
          if (currentVariantCount >= MAX_VARIANTS) {
            addVariantBtn.disabled = true;
            addVariantBtn.classList.add('opacity-50', 'cursor-not-allowed');
            addVariantBtn.classList.remove('hover:bg-green-600');
          } else {
            addVariantBtn.disabled = false;
            addVariantBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            addVariantBtn.classList.add('hover:bg-green-600');
          }
        }

        function getVariants() {
          const variants = [];
          const variantElements = variantsContainer.querySelectorAll('.variant-item');
          
          variantElements.forEach(element => {
            const ml = element.querySelector('.variant-ml').value;
            const quantity = element.querySelector('.variant-quantity').value;
            
            if (ml && quantity !== '') {
              variants.push({
                ml: ml,
                quantity: quantity
              });
            }
          });
          
          return variants;
        }

        function populateVariants(variantItems) {
          variantsContainer.innerHTML = '';
          if (variantItems && variantItems.length > 0) {
            const itemsToShow = variantItems.slice(0, MAX_VARIANTS);
            itemsToShow.forEach(variant => {
              addVariantItem(variant.Ml, variant.Quantity);
            });
          } else {
            addVariantItem(); 
          }
          updateAddVariantButtonState();
        }

        addVariantBtn.addEventListener('click', () => {
          addVariantItem();
        });

        function openModal(isEdit = false, productData = null) {
          modalTitle.textContent = isEdit ? 'Edit Product' : 'Add Product';
          submitBtn.innerHTML = isEdit 
            ? '<i class="fas fa-save mr-2"></i> Update Product'
            : '<i class="fas fa-plus-circle mr-2"></i> Publish Product';
          
          if (isEdit && productData) {
            populateForm(productData);
          } else {
            resetForm();
          }
          
          modal.classList.remove("hidden");
          document.body.style.overflow = "hidden"; 
        }

        function closeModal() {
          modal.classList.add("hidden");
          document.body.style.overflow = ""; 
          resetForm();
        }

        function openCropModal(file, onComplete = null) {
          if (!cropModal.classList.contains('hidden')) {
            return;
          }
          
          currentCropFile = file;
          currentCropModalOnComplete = onComplete;
          const reader = new FileReader();
          
          reader.onload = (e) => {
            cropImage.src = e.target.result;
            cropModal.classList.remove("hidden");
            
            if (currentCropper) {
              currentCropper.destroy();
            }
            
            currentCropper = new Cropper(cropImage, {
              aspectRatio: 1,
              viewMode: 1,
              autoCropArea: 0.8,
              movable: true,
              zoomable: true,
              rotatable: false,
              scalable: false,
            });
          };
          
          reader.readAsDataURL(file);
        }

        function closeCropModal() {
          cropModal.classList.add("hidden");
          if (currentCropper) {
            currentCropper.destroy();
            currentCropper = null;
          }
          currentCropFile = null;
          currentCropModalOnComplete = null;
        }

        function openViewModal() {
          viewModal.classList.remove("hidden");
          document.body.style.overflow = "hidden";
        }

        function closeViewModal() {
          viewModal.classList.add("hidden");
          document.body.style.overflow = "";
        }

        function resetForm() {
          form.reset();
          selectedFiles = [];
          existingImages = [];
          preview.innerHTML = "";
          existingPreview.innerHTML = "";
          document.getElementById("productId").value = "";
          document.getElementById("productIsListed").checked = true;
          hideAllErrors();
          submitBtn.disabled = false;
          editingId = null;
          updateUploadAreaText();
          populateVariants([]); 
          updateAddVariantButtonState(); 
          
          fileInput.value = '';
        }

        function populateForm(product) {
          document.getElementById("productId").value = product._id;
          document.getElementById("productName").value = product.productName || "";
          document.getElementById("productDescription").value = product.description || "";
          document.getElementById("productCategory").value = product.category?._id || "";
          document.getElementById("productPrice").value = product.price || 0;
          document.getElementById("productOldPrice").value = product.oldPrice || "";
          document.getElementById("productBrand").value = product.brand?._id || "";
          document.getElementById("productDiscount").value = product.discount || 0;
          document.getElementById("productIsListed").checked = product.isListed !== false;

          existingImages = product.images || [];
          updateExistingImagesPreview();
          updateUploadAreaText();
          
          populateVariants(product.VariantItem || []);
          
          editingId = product._id;
        }

        function updateExistingImagesPreview() {
          existingPreview.innerHTML = "";
          if (existingImages.length === 0) {
            return;
          }
          
          existingImages.forEach((image, i) => {
            const div = document.createElement("div");
            div.className = "relative w-24 h-24 bg-gray-100 rounded-lg overflow-hidden shadow image-preview";
            div.innerHTML = `
              <img src="${image}" class="w-full h-full object-cover" alt="Existing image ${i + 1}" />
              <button type="button" onclick="removeExistingImage(${i})" class="absolute top-0 right-0 bg-red-500 text-white text-xs w-6 h-6 rounded-full -m-1 hover:bg-red-600 transition flex items-center justify-center">
                <i class="fas fa-times"></i>
              </button>
              <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 truncate">Existing</div>
            `;
            existingPreview.appendChild(div);
          });
        }

        function hideAllErrors() {
          document.querySelectorAll('[id$="Error"]').forEach(error => error.classList.add("hidden"));
        }

        function updateUploadAreaText() {
          const totalImages = selectedFiles.length + existingImages.length;
          if (totalImages > 0) {
            uploadText.textContent = `${totalImages} image(s) selected. Click or drag to add more (min 3, max 5)`;
          } else {
            uploadText.textContent = "Click or drag images here (min 3)";
          }
        }

        function processFilesSequentially(files, index = 0) {
          if (index >= files.length) {
            fileInput.value = ''; 
            return;
          }
          
          const file = files[index];
          openCropModal(file, () => {
            setTimeout(() => {
              processFilesSequentially(files, index + 1);
            }, 100);
          });
        }

        function handleFiles(newFiles) {
          const maxAllowed = 5;
          const currentTotal = selectedFiles.length + existingImages.length;
          
          if (currentTotal + newFiles.length > maxAllowed) {
            Swal.fire({
              icon: 'warning',
              title: 'Image Limit',
              text: `Maximum ${maxAllowed} images allowed. You can add ${maxAllowed - currentTotal} more.`,
              confirmButtonColor: '#3085d6',
            });
            fileInput.value = ''; 
            return;
          }
          
          const validFiles = newFiles.filter((file) => {
            const validTypes = ["image/jpeg","image/jpg","image/png","image/webp"];
            const maxSize = 5 * 1024 * 1024;
            if (!validTypes.includes(file.type)) {
              Swal.fire({
                icon: 'error',
                title: 'Invalid Format',
                text: `File ${file.name} is not a supported image format`,
                confirmButtonColor: '#d33',
              });
              return false;
            }
            if (file.size > maxSize) {
              Swal.fire({
                icon: 'error',
                title: 'File Too Large',
                text: `File ${file.name} is too large. Maximum size is 5MB`,
                confirmButtonColor: '#d33',
              });
              return false;
            }
            return true;
          });
          
          if (validFiles.length > 0) {
            processFilesSequentially(validFiles);
          } else {
            fileInput.value = ''; 
          }
        }

        openBtn.addEventListener("click", () => openModal(false));
        closeBtn.addEventListener("click", closeModal);
        closeCropBtn.addEventListener("click", closeCropModal);
        closeViewBtn.addEventListener("click", closeViewModal);
        cancelBtn.addEventListener("click", closeModal);
        cancelCropBtn.addEventListener("click", closeCropModal);
        
        modal.addEventListener("click", (e) => { if (e.target === modal) closeModal(); });
        cropModal.addEventListener("click", (e) => { if (e.target === cropModal) closeCropModal(); });
        viewModal.addEventListener("click", (e) => { if (e.target === viewModal) closeViewModal(); });
        
        document.addEventListener("keydown", (e) => { 
          if (e.key === "Escape") {
            if (!modal.classList.contains("hidden")) closeModal();
            if (!cropModal.classList.contains("hidden")) closeCropModal();
            if (!viewModal.classList.contains("hidden")) closeViewModal();
          }
        });

        uploadArea.addEventListener("click", () => fileInput.click());
        ["dragenter", "dragover", "dragleave", "drop"].forEach((ev) => {
          uploadArea.addEventListener(ev, (e) => { e.preventDefault(); e.stopPropagation(); }, false);
        });
        uploadArea.addEventListener("dragenter", () => uploadArea.classList.add("border-blue-500", "bg-blue-50"));
        uploadArea.addEventListener("dragover", () => uploadArea.classList.add("border-blue-500", "bg-blue-50"));
        uploadArea.addEventListener("dragleave", () => uploadArea.classList.remove("border-blue-500", "bg-blue-50"));
        uploadArea.addEventListener("drop", (e) => {
          uploadArea.classList.remove("border-blue-500", "bg-blue-50");
          const files = Array.from(e.dataTransfer.files).filter((f) => f.type.startsWith("image/"));
          handleFiles(files);
        });
        fileInput.addEventListener("change", (e) => handleFiles(Array.from(e.target.files)));

        confirmCropBtn.addEventListener("click", () => {
          if (currentCropper && currentCropFile) {
            const canvas = currentCropper.getCroppedCanvas({
              width: 440,
              height: 440,
              fillColor: '#fff',
              imageSmoothingEnabled: true,
              imageSmoothingQuality: 'high'
            });
            
            canvas.toBlob((blob) => {
              const croppedFile = new File([blob], currentCropFile.name, {
                type: 'image/jpeg',
                lastModified: Date.now()
              });
              
              selectedFiles.push(croppedFile);
              updatePreview();
              updateUploadAreaText();
              closeCropModal();
              
              if (currentCropModalOnComplete) {
                currentCropModalOnComplete();
              }
            }, 'image/jpeg', 0.9);
          }
        });

        function updatePreview() {
          preview.innerHTML = "";
          if (selectedFiles.length === 0) {
            return;
          }
          selectedFiles.forEach((file, i) => {
            const reader = new FileReader();
            reader.onload = (ev) => {
              const div = document.createElement("div");
              div.className = "relative w-24 h-24 bg-gray-100 rounded-lg overflow-hidden shadow image-preview";
              div.innerHTML = `
                <img src="${ev.target.result}" class="w-full h-full object-cover" alt="Preview ${i + 1}" />
                <button type="button" onclick="removeImage(${i})" class="absolute top-0 right-0 bg-red-500 text-white text-xs w-6 h-6 rounded-full -m-1 hover:bg-red-600 transition flex items-center justify-center">
                  <i class="fas fa-times"></i>
                </button>
                <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 truncate">${file.name}</div>
              `;
              preview.appendChild(div);
            };
            reader.readAsDataURL(file);
          });
        }

        function validateForm() {
          let isValid = true;
          hideAllErrors();
          const validations = [
            { field: 'productName', error: 'nameError', test: (v) => v.trim() },
            { field: 'productDescription', error: 'descriptionError', test: (v) => v.trim() },
            { field: 'productCategory', error: 'categoryError', test: (v) => v },
            { field: 'productPrice', error: 'priceError', test: (v) => v && parseFloat(v) >= 0 }
          ];
          validations.forEach(({ field, error, test }) => {
            const value = document.getElementById(field).value;
            if (!test(value)) {
              document.getElementById(error).classList.remove("hidden");
              isValid = false;
            }
          });
          const oldPrice = parseFloat(document.getElementById("productOldPrice").value) || parseFloat(document.getElementById("productPrice").value);
          const price = parseFloat(document.getElementById("productPrice").value);
          if (oldPrice < price) {
            document.getElementById("oldPriceError").classList.remove("hidden");
            isValid = false;
          }
          const discount = parseFloat(document.getElementById("productDiscount").value || 0);
          if (discount < 0 || discount > 100) {
            document.getElementById("discountError").classList.remove("hidden");
            isValid = false;
          }
          const totalImages = selectedFiles.length + existingImages.length;
          if (totalImages < 3) {
            document.getElementById("imageError").classList.remove("hidden");
            document.getElementById("imageError").textContent = "Please add at least three images";
            isValid = false;
          } else if (totalImages > 5) {
            document.getElementById("imageError").classList.remove("hidden");
            document.getElementById("imageError").textContent = "Maximum 5 images allowed";
            isValid = false;
          }
          const variants = getVariants();
          if (variants.length === 0) {
            document.getElementById("variantError").classList.remove("hidden");
            document.getElementById("variantError").textContent = "At least one ML variant is required";
            isValid = false;
          }
          const mlValues = variants.map(v => v.ml);
          const uniqueMlValues = [...new Set(mlValues)];
          if (mlValues.length !== uniqueMlValues.length) {
            document.getElementById("variantError").classList.remove("hidden");
            document.getElementById("variantError").textContent = "Duplicate ML values are not allowed";
            isValid = false;
          }
          const invalidMl = variants.find(v => !predefinedMlOptions.includes(Number(v.ml)));
          if (invalidMl) {
            document.getElementById("variantError").classList.remove("hidden");
            document.getElementById("variantError").textContent = `Invalid ML value: ${invalidMl.ml}. Valid options are: ${predefinedMlOptions.join(', ')}`;
            isValid = false;
          }
          const variantCount = variantsContainer.querySelectorAll('.variant-item').length;
          if (variantCount > MAX_VARIANTS) {
            document.getElementById("variantError").classList.remove("hidden");
            document.getElementById("variantError").textContent = `Maximum ${MAX_VARIANTS} variants allowed`;
            isValid = false;
          }
          return isValid;
        }

        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          if (!validateForm()) return;
          
          const submitBtn = document.getElementById("submitBtn");
          submitBtn.disabled = true;
          submitBtn.innerHTML = `<i class="fas fa-spinner fa-spin mr-2"></i>SAVING...`;
          
          const fd = new FormData();
          const productId = document.getElementById("productId").value;
          const price = parseFloat(document.getElementById("productPrice").value);
          const oldPrice = parseFloat(document.getElementById("productOldPrice").value || price);
          const isListed = document.getElementById("productIsListed").checked;
          const variants = getVariants();
          
          fd.append("productName", document.getElementById("productName").value.trim());
          fd.append("description", document.getElementById("productDescription").value.trim());
          fd.append("category", document.getElementById("productCategory").value);
          fd.append("price", price);
          fd.append("oldPrice", oldPrice);
          fd.append("brand", document.getElementById("productBrand").value || "");
          fd.append("discount", document.getElementById("productDiscount").value || 0);
          fd.append("isListed", isListed);
          
          variants.forEach((variant, index) => {
            fd.append("variantMl", variant.ml);
            fd.append("variantQuantity", variant.quantity);
          });
          
          existingImages.forEach((image) => {
            fd.append("existingImages", image);
          });
          
          selectedFiles.forEach((file) => {
            fd.append("images", file);
          });
          
          try {
            let url, method;
            if (productId) {
              url = `/admin/Product/${productId}`;
              method = "PUT";
            } else {
              url = "/admin/Product";
              method = "POST";
            }
            
            const res = await axios({
              method: method,
              url: url,
              data: fd,
              headers: { "Content-Type": "multipart/form-data" }
            });
            
            await Swal.fire({
              icon: 'success',
              title: 'Success!',
              text: res.data.message,
              confirmButtonColor: '#3085d6',
              confirmButtonText: 'OK'
            });
            
            closeModal();
            window.location.reload();
          } catch (err) {
            console.error("Operation failed:", err);
            const errorMsg = err.response?.data?.message || 
                            (productId ? "Failed to update product" : "Failed to add product");
            
            await Swal.fire({
              icon: 'error',
              title: 'Error!',
              text: errorMsg,
              confirmButtonColor: '#d33',
              confirmButtonText: 'OK'
            });
          } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = productId 
              ? '<i class="fas fa-save mr-2"></i> Update Product'
              : '<i class="fas fa-plus-circle mr-2"></i> Publish Product';
          }
        });

        table.addEventListener("click", async (e) => {
          const deleteBtn = e.target.closest(".delete-btn");
          if (deleteBtn) {
            const row = deleteBtn.closest("tr");
            const productData = JSON.parse(row.getAttribute('data-product'));
            
            const result = await Swal.fire({
              title: 'Are you sure?',
              text: "You won't be able to revert this!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, delete it!'
            });
            
            if (result.isConfirmed) {
              try {
                const response = await axios.delete(`/admin/Product/${productData._id}`);
                
                await Swal.fire({
                  title: 'Deleted!',
                  text: response.data.message,
                  icon: 'success',
                  confirmButtonColor: '#3085d6'
                });
                
                window.location.reload();
              } catch (error) {
                console.error("Error deleting product:", error);
                
                await Swal.fire({
                  title: 'Error!',
                  text: "Failed to delete product",
                  icon: 'error',
                  confirmButtonColor: '#d33'
                });
              }
            }
          }
        });

        table.addEventListener("click", (e) => {
          const editBtn = e.target.closest(".edit-btn");
          if (editBtn) {
            const row = editBtn.closest("tr");
            const productData = JSON.parse(row.getAttribute('data-product'));
            openModal(true, productData);
          }
        });

        window.removeImage = (i) => {
          selectedFiles.splice(i, 1);
          updatePreview();
          updateUploadAreaText();
        };

        window.removeExistingImage = (i) => {
          existingImages.splice(i, 1);
          updateExistingImagesPreview();
          updateUploadAreaText();
        };

        window.removeVariant = removeVariant;
      });

      window.viewProduct = async (id) => {
        try {
          const response = await axios.get(`/admin/product/${id}`);
          const product = response.data.product;
          
          let imagesHTML = '';
          if (product.images && product.images.length > 0) {
            imagesHTML = `
              <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Product Images</h3>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                  ${product.images.map((image, index) => `
                    <div class="relative bg-gray-100 rounded-lg overflow-hidden shadow">
                      <img src="${image}" alt="Product Image ${index + 1}" class="w-full h-48 object-cover">
                      <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-2 text-center">
                        Image ${index + 1}
                      </div>
                    </div>
                  `).join('')}
                </div>
              </div>
            `;
          }

          let variantsHTML = '';
          if (product.VariantItem && product.VariantItem.length > 0) {
            variantsHTML = `
              <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">ML Variants</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  ${product.VariantItem.map((variant, index) => `
                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                      <div class="flex justify-between items-center">
                        <div>
                          <h4 class="font-medium text-gray-800">${variant.Ml}ml</h4>
                          <p class="text-sm text-gray-600">Quantity: ${variant.Quantity}</p>
                        </div>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                          ${variant.Quantity > 10 ? 'bg-green-100 text-green-800' : 
                            variant.Quantity > 0 ? 'bg-yellow-100 text-yellow-800' : 
                            'bg-red-100 text-red-800'}">
                          ${variant.Quantity > 0 ? 'In Stock' : 'Out of Stock'}
                        </span>
                      </div>
                    </div>
                  `).join('')}
                </div>
              </div>
            `;
          }

          const content = `
            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <h3 class="text-lg font-semibold text-gray-800 mb-2">Basic Information</h3>
                  <div class="space-y-3">
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Product Name</label>
                      <p class="mt-1 text-gray-900">${product.productName}</p>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Description</label>
                      <p class="mt-1 text-gray-900">${product.description || 'No description'}</p>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Category</label>
                      <p class="mt-1 text-gray-900">${product.category?.name || 'No category'}</p>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Brand</label>
                      <p class="mt-1 text-gray-900">${product.brand?.name || 'No brand'}</p>
                    </div>
                  </div>
                </div>
                
                <div>
                  <h3 class="text-lg font-semibold text-gray-800 mb-2">Pricing</h3>
                  <div class="space-y-3">
                    <div class="grid grid-cols-2 gap-4">
                      <div>
                        <label class="block text-sm font-medium text-gray-600">Current Price</label>
                        <p class="mt-1 text-blue-600 font-semibold">₹${product.price?.toFixed(2) || '0.00'}</p>
                      </div>
                      <div>
                        <label class="block text-sm font-medium text-gray-600">Old Price</label>
                        <p class="mt-1 text-gray-500 ${product.oldPrice > product.price ? 'line-through' : ''}">₹${product.oldPrice?.toFixed(2) || product.price?.toFixed(2) || '0.00'}</p>
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Discount</label>
                      <p class="mt-1 ${product.discount > 0 ? 'text-green-600 font-semibold' : 'text-gray-500'}">
                        ${product.discount > 0 ? product.discount + '%' : 'None'}
                      </p>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-600">Status</label>
                      <p class="mt-1">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium 
                          ${product.isListed ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                          ${product.isListed ? "Listed" : "Unlisted"}
                        </span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              
              ${variantsHTML}
              ${imagesHTML}
            </div>
          `;
          
          document.getElementById('viewProductContent').innerHTML = content;
          document.getElementById('viewProductModal').classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        } catch (error) {
          console.error('Error fetching product:', error);
          
          await Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: 'Failed to load product details',
            confirmButtonColor: '#d33',
          });
        }
      };
    </script>
  </body>
</html>