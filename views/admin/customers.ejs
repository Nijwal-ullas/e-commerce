<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users List - Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>

  <body class="bg-gray-100">
    <div class="flex h-screen">
      <%- include('../partials/admin/sidebar') %>

      <main class="flex-1 overflow-y-auto">
        <%- include('../partials/admin/header') %>

        <div class="p-6">
          <div class="bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-6 border-b">
              <h1 class="text-2xl font-semibold text-gray-800">Users List</h1>
              <div class="flex items-center space-x-4">
                <form method="POST" action="/admin/deleteUsers">
                  <button
                    type="submit"
                    class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg font-medium"
                  >
                    DELETE
                  </button>
                </form>

                <form method="GET" action="/admin/customers" class="relative">
                  <input
                    type="text"
                    name="search"
                    placeholder="Search here..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>"
                    class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg w-80 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                  <i
                    class="fas fa-search absolute left-3 top-3 text-gray-400"
                  ></i>
                </form>
              </div>
            </div>

            <div class="overflow-x-auto sm:rounded-lg">
              <form method="POST" action="/admin/deleteUsers">
                <table class="w-full">
                  <thead class="bg-gray-50 border-b">
                    <tr>
                      <th class="px-6 py-4 text-left">
                        <input
                          type="checkbox"
                          id="selectAll"
                          class="w-4 h-4 rounded border-gray-300"
                        />
                      </th>
                      <th
                        class="px-6 py-4 text-left text-sm font-semibold text-gray-700"
                      >
                        USER
                      </th>
                      <th
                        class="px-6 py-4 text-left text-sm font-semibold text-gray-700"
                      >
                        USER PHONE NO
                      </th>
                      <th
                        class="px-6 py-4 text-left text-sm font-semibold text-gray-700"
                      >
                        CREATED
                      </th>
                      <th
                        class="px-6 py-4 text-left text-sm font-semibold text-gray-700"
                      >
                        ACTION
                      </th>
                    </tr>
                  </thead>

                  <tbody class="divide-y divide-gray-200">
                    <% if (users && users.length > 0) { %> <% users.forEach(user
                    => { %>
                    <tr class="hover:bg-gray-50">
                      <td class="px-6 py-4">
                        <input
                          type="checkbox"
                          name="selectedUsers"
                          value="<%= user._id %>"
                          class="w-4 h-4 rounded border-gray-300"
                        />
                      </td>

                      <td class="px-6 py-4">
                        <div class="flex items-center space-x-3">
                          <div
                            class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center"
                          >
                            <i class="fas fa-user text-gray-500"></i>
                          </div>
                          <div>
                            <div class="font-medium text-gray-900">
                              <%= user.name %>
                            </div>
                            <div
                              class="text-sm text-gray-500 flex items-center"
                            >
                              <i class="far fa-envelope mr-2"></i>
                              <%= user.email %>
                            </div>
                          </div>
                        </div>
                      </td>

                      <td class="px-6 py-4 text-gray-700">
                        <i class="fas fa-phone mr-2"></i>
                        <%= user.phone || '*********' %>
                      </td>

                      <td class="px-6 py-4 text-gray-700">
                        <i class="far fa-calendar mr-2"></i>
                        <%= user.createdAt ? new Date(user.createdAt)
                        .toISOString() .split('T')[0] : 'N/A' %>
                      </td>

                      <td class="px-6 py-4">
                        <% if (user.isBlocked === false) { %>
                        <a
                          href="/admin/blockCustomer?id=<%= user._id %>"
                          class="border border-red-500 text-red-500 hover:bg-red-500 hover:text-white px-4 py-1 rounded font-medium transition"
                        >
                          Block
                        </a>
                        <% } else { %>
                        <a
                          href="/admin/unblockCustomer?id=<%= user._id %>"
                          class="border border-green-500 text-green-500 hover:bg-green-500 hover:text-white px-4 py-1 rounded font-medium transition"
                        >
                          Unblock
                        </a>
                        <% } %>
                      </td>
                    </tr>
                    <% }) %> <% } else { %>
                    <tr>
                      <td
                        colspan="5"
                        class="px-6 py-8 text-center text-gray-500"
                      >
                        No users found
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </form>
            </div>

            <div
              class="flex items-center justify-between px-6 py-4 border-t bg-white"
            >
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-700">
                  Page <%= currentPage %> of <%= totalPages %> â€” Total Users:
                  <%= totalUsers %>
                </span>

                <div class="flex space-x-2">
                  <a
                    href="?page=<%= Math.max(1, currentPage - 1) %>"
                    class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded hover:bg-gray-50 <%= currentPage <= 1 ? 'pointer-events-none opacity-50' : '' %>"
                  >
                    <i class="fas fa-chevron-left text-sm"></i>
                  </a>

                  <% for (let i = 1; i <= totalPages; i++) { %>
                  <a
                    href="?page=<%= i %>"
                    class="w-8 h-8 flex items-center justify-center rounded text-sm font-medium <%= i === currentPage ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100 border border-gray-300' %>"
                  >
                    <%= i %>
                  </a>
                  <% } %>

                  <a
                    href="?page=<%= Math.min(totalPages, currentPage + 1) %>"
                    class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded hover:bg-gray-50 <%= currentPage >= totalPages ? 'pointer-events-none opacity-50' : '' %>"
                  >
                    <i class="fas fa-chevron-right text-sm"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script>
      const selectAll = document.getElementById("selectAll");
      if (selectAll) {
        selectAll.addEventListener("change", (e) => {
          const checkboxes = document.querySelectorAll(
            'input[name="selectedUsers"]'
          );
          checkboxes.forEach((cb) => (cb.checked = e.target.checked));
        });
      }
    </script>
  </body>
</html>
