<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Brand Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-gray-100">
    <div class="flex h-screen">
      <%- include('../partials/admin/sidebar') %>

      <main class="flex-1 overflow-y-auto">
        <%- include('../partials/admin/header') %>

        <div class="p-6">
          <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-semibold text-gray-800">
              Brand Management
            </h1>
            <div class="flex gap-3 items-center">
              <input
                type="text"
                id="searchInput"
                placeholder="Search brands..."
                class="px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-gray-400"
              />
              <button
                id="addBrandBtn"
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
              >
                Add Brand
              </button>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                  >
                    Logo
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                  >
                    Name
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                  >
                    Description
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                  >
                    Actions
                  </th>
                </tr>
              </thead>

              <tbody id="brandTableBody" class="divide-y divide-gray-200">
                <% if (brands && brands.length > 0) { %> <%
                brands.forEach((brand) => { %>
                <tr data-id="<%= brand._id %>">
                  <td class="px-6 py-4">
                    <img
                      src="<%= brand.brandLogo || 'https://cdn-icons-png.flaticon.com/128/711/711769.png' %>"
                      alt="<%= brand.name %>"
                      class="w-12 h-12 object-cover rounded"
                    />
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800">
                    <%= brand.name %>
                  </td>
                  <td class="px-6 py-4 text-gray-600">
                    <%= brand.description || '—' %>
                  </td>
                  <td class="px-6 py-4 flex gap-2">
                    <button
                      class="edit-btn w-8 h-8 flex items-center justify-center border rounded text-gray-600 hover:text-blue-600 hover:border-blue-400"
                      data-id="<%= brand._id %>"
                    >
                      <i class="fas fa-edit"></i>
                    </button>
                    <button
                      class="delete-btn w-8 h-8 flex items-center justify-center border rounded text-gray-600 hover:text-red-600 hover:border-red-400"
                      data-id="<%= brand._id %>"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="4" class="px-6 py-8 text-center text-gray-500">
                    No brands found
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>

            <div
              class="flex items-center justify-between px-6 py-4 border-t bg-white"
            >
              <span class="text-sm text-gray-700">
                Page <%= currentPage %> of <%= totalPages %> — Total Brands: <%=
                totalBrands %>
              </span>
              <div class="flex space-x-2">
                <a
                  href="?page=<%= Math.max(1, currentPage - 1) %>"
                  class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded hover:bg-gray-50 <%= currentPage <= 1 ? 'pointer-events-none opacity-50' : '' %>"
                >
                  <i class="fas fa-chevron-left text-sm"></i>
                </a>
                <% for (let i = 1; i <= totalPages; i++) { %>
                <a
                  href="?page=<%= i %>"
                  class="w-8 h-8 flex items-center justify-center rounded text-sm font-medium <%= i === currentPage ? 'bg-blue-500 text-white' : 'text-gray-700 hover:bg-gray-100 border border-gray-300' %>"
                >
                  <%= i %>
                </a>
                <% } %>
                <a
                  href="?page=<%= Math.min(totalPages, currentPage + 1) %>"
                  class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded hover:bg-gray-50 <%= currentPage >= totalPages ? 'pointer-events-none opacity-50' : '' %>"
                >
                  <i class="fas fa-chevron-right text-sm"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <div
      id="brandModal"
      class="fixed inset-0 bg-gray-800 bg-opacity-50 hidden flex items-center justify-center z-50"
    >
      <div class="bg-white rounded-lg p-6 w-96 max-h-screen overflow-y-auto">
        <h2 id="modalTitle" class="text-xl font-semibold mb-4 text-gray-800">
          Add New Brand
        </h2>
        <form id="brandForm" enctype="multipart/form-data">
          <input type="hidden" id="brandId" />

          <div class="mb-3">
            <label class="block text-gray-700 mb-1">Name</label>
            <input
              type="text"
              name="name"
              id="brandName"
              required
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300"
            />
          </div>

          <div class="mb-3">
            <label class="block text-gray-700 mb-1">Description</label>
            <textarea
              name="description"
              id="brandDescription"
              rows="3"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300"
            ></textarea>
          </div>

          <div id="currentImageContainer" class="mb-3 hidden">
            <label class="block text-gray-700 mb-1">Current Logo</label>
            <img
              id="currentImage"
              src=""
              alt="Current"
              class="w-20 h-20 object-cover rounded"
            />
          </div>

          <div class="mb-3">
            <label class="block text-gray-700 mb-1">New Logo (Optional)</label>
            <input
              type="file"
              name="image"
              id="brandImage"
              accept="image/*"
              class="w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300"
            />
          </div>

          <div class="flex justify-end gap-2 mt-4">
            <button
              type="button"
              id="cancelModal"
              class="px-4 py-2 border rounded text-gray-600 hover:bg-gray-100"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="submitBtn"
              class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
            >
              Save
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      const addBtn = document.getElementById("addBrandBtn");
      const modal = document.getElementById("brandModal");
      const modalTitle = document.getElementById("modalTitle");
      const submitBtn = document.getElementById("submitBtn");
      const cancelBtn = document.getElementById("cancelModal");
      const form = document.getElementById("brandForm");
      const nameInput = document.getElementById("brandName");
      const descInput = document.getElementById("brandDescription");
      const imageInput = document.getElementById("brandImage");
      const currentImageContainer = document.getElementById(
        "currentImageContainer"
      );
      const currentImage = document.getElementById("currentImage");
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("brandTableBody");
      const table = tbody.closest("table");

      let editingId = null;
      let debounceTimer;

      function openModal(isEdit = false, brand = {}) {
        editingId = isEdit ? brand._id : null;
        modalTitle.textContent = isEdit ? "Edit Brand" : "Add New Brand";
        submitBtn.textContent = isEdit ? "Update" : "Save";

        nameInput.value = brand.name || "";
        descInput.value = brand.description || "";
        imageInput.value = "";

        if (isEdit && brand.brandLogo) {
          currentImage.src = brand.brandLogo;
          currentImageContainer.classList.remove("hidden");
        } else {
          currentImageContainer.classList.add("hidden");
        }

        modal.classList.replace("hidden", "flex");
      }

      addBtn.addEventListener("click", () => openModal(false));
      cancelBtn.addEventListener("click", () => {
        modal.classList.replace("flex", "hidden");
        form.reset();
        editingId = null;
      });

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData();
        formData.append("name", nameInput.value.trim());
        formData.append("description", descInput.value.trim());
        if (imageInput.files[0]) {
          formData.append("image", imageInput.files[0]);
        }

        const isEdit = !!editingId;
        const url = isEdit
          ? `/admin/editBrand/${editingId}`
          : "/admin/addBrand";

        try {
          const res = await axios({
            method: isEdit ? "put" : "post",
            url,
            data: formData,
          });

          alert(res.data.message || (isEdit ? "Brand updated" : "Brand added"));

          if (isEdit) {
            const row = table.querySelector(`tr[data-id="${editingId}"]`);
            row.cells[1].textContent = nameInput.value.trim();
            row.cells[2].textContent = descInput.value.trim() || "—";
            if (imageInput.files[0]) location.reload();
          } else {
            location.reload();
          }

          modal.classList.replace("flex", "hidden");
          form.reset();
          editingId = null;
        } catch (err) {
          console.error(err);
          alert(err.response?.data?.message || "Operation failed");
        }
      });

      searchInput.addEventListener("input", () => {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(async () => {
          const q = searchInput.value.trim();
          if (!q) return location.reload();

          try {
            const { data } = await axios.get("/admin/brand/search", {
              params: { query: q },
            });
            renderRows(data.brands);
          } catch (err) {
            alert("Search error");
          }
        }, 400);
      });

      function renderRows(brands) {
        if (!brands || brands.length === 0) {
          tbody.innerHTML = `<tr><td colspan="4" class="px-6 py-8 text-center text-gray-500">
            No brands match "<strong>${searchInput.value}</strong>"
          </td></tr>`;
          return;
        }

        tbody.innerHTML = brands
          .map(
            (b) => `
          <tr data-id="${b._id}">
            <td class="px-6 py-4">
              <img src="${
                b.brandLogo ||
                "https://cdn-icons-png.flaticon.com/128/711/711769.png"
              }"
                   alt="${b.name}" class="w-12 h-12 object-cover rounded">
            </td>
            <td class="px-6 py-4 font-medium text-gray-800">${b.name}</td>
            <td class="px-6 py-4 text-gray-600">${b.description || "—"}</td>
            <td class="px-6 py-4 flex gap-2">
              <button class="edit-btn w-8 h-8 flex items-center justify-center border rounded text-gray-600 hover:text-blue-600 hover:border-blue-400"
                      data-id="${b._id}"><i class="fas fa-edit"></i></button>
              <button class="delete-btn w-8 h-8 flex items-center justify-center border rounded text-gray-600 hover:text-red-600 hover:border-red-400"
                      data-id="${b._id}"><i class="fas fa-trash"></i></button>
            </td>
          </tr>`
          )
          .join("");
      }

      table.addEventListener("click", async (e) => {
        const btn = e.target.closest("button");
        if (!btn) return;
        const id = btn.dataset.id;
        const row = btn.closest("tr");

        if (btn.classList.contains("edit-btn")) {
          const brand = {
            _id: id,
            name: row.cells[1].textContent.trim(),
            description:
              row.cells[2].textContent.trim() === "—"
                ? ""
                : row.cells[2].textContent.trim(),
            brandLogo: row.querySelector("img").src,
          };
          openModal(true, brand);
        }

        if (btn.classList.contains("delete-btn")) {
          if (!confirm("Delete this brand?")) return;
          try {
            await axios.delete(`/admin/deleteBrand/${id}`);
            row.remove();
            alert("Brand deleted");
          } catch (err) {
            alert(err.response?.data?.message || "Delete failed");
          }
        }
      });
    </script>
  </body>
</html>
