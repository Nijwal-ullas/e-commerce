<div class="w-full lg:w-72 flex-shrink-0">
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-200">
    <!-- Header with back button -->
    <div class="px-6 py-5 bg-gradient-to-r from-gray-50 to-white border-b border-gray-200">
      <button
        onclick="window.history.back()"
        class="flex items-center gap-2 text-gray-600 hover:text-blue-600 transition-all duration-200 group font-medium"
      >
        <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        <span class="text-sm font-semibold">Go Back</span>
      </button>
    </div>

    <!-- Navigation Menu -->
    <nav class="p-4 space-y-1">
      <!-- Profile -->
      <a
        href="/profile"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/profile' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/profile' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Profile</span>
          <p class="text-xs text-gray-400 mt-0.5">Manage your account</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <!-- Address -->
      <a
        href="/address"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/address' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/address' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Address</span>
          <p class="text-xs text-gray-400 mt-0.5">Shipping addresses</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <!-- Orders -->
      <a
        href="/orders"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/orders' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/orders' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Orders</span>
          <p class="text-xs text-gray-400 mt-0.5">View your orders</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <!-- Wishlist -->
      <a
        href="/wishlist"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/wishlist' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/wishlist' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Wishlist</span>
          <p class="text-xs text-gray-400 mt-0.5">Saved items</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <!-- Wallet -->
      <a
        href="/wallet"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/wallet' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/wallet' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Wallet</span>
          <p class="text-xs text-gray-400 mt-0.5">Balance & payments</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      <!-- Referral -->
      <a
        href="/referral"
        class="flex items-center gap-4 px-4 py-3 <%= currentRoute === '/referral' ? 'bg-blue-50 text-blue-700 border-l-4 border-blue-600 shadow-sm' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900 hover:shadow-sm' %> rounded-xl transition-all duration-200 group"
      >
        <div class="<%= currentRoute === '/referral' ? 'bg-blue-100' : 'bg-gray-100 group-hover:bg-blue-100' %> p-2 rounded-lg transition-colors duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
        </div>
        <div class="flex-1">
          <span class="text-sm font-medium">Referral</span>
          <p class="text-xs text-gray-400 mt-0.5">Earn rewards</p>
        </div>
        <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </nav>

    <!-- Logout Button -->
    <div class="p-4 mt-4 border-t border-gray-200">
      <form action="/logout" method="get">
        <button
          type="submit"
          class="w-full flex items-center justify-center gap-3 px-4 py-3 text-gray-700 hover:text-white hover:bg-gradient-to-r hover:from-red-500 hover:to-red-600 bg-red-50 hover:shadow-lg rounded-xl transition-all duration-200 group font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
            />
          </svg>
          <span>Log Out</span>
          <svg class="w-4 h-4 opacity-0 group-hover:translate-x-1 group-hover:opacity-100 transition-all duration-200" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>